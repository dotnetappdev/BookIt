@using BookIt.Core.DTOs
@using System.Text.Json
@{
    ViewData["Title"] = "Classes & Group Sessions";
    Layout = "_AdminLayout";
    var tenantSlug = ViewBag.TenantSlug as string ?? "";
    var accessToken = ViewBag.AccessToken as string ?? "";
    var sessions = ViewBag.Sessions as List<JsonElement> ?? new();
    var staff = ViewBag.Staff as List<StaffResponse> ?? new();
    var services = ViewBag.Services as List<ServiceResponse> ?? new();
}

<div class="page-header">
    <div>
        <h1 class="page-title">Classes &amp; Group Sessions</h1>
        <p class="page-subtitle">Schedule classes and sessions that customers can book into — assign one or more instructors</p>
    </div>
    <button class="btn btn-brand" data-bs-toggle="modal" data-bs-target="#addClassModal" aria-haspopup="dialog">
        <i class="bi bi-plus-circle me-2"></i>New Class
    </button>
</div>

@if (!sessions.Any())
{
    <div class="text-center py-5">
        <i class="bi bi-calendar3-event fs-1 text-muted d-block mb-3"></i>
        <h5 class="text-muted">No classes scheduled</h5>
        <p class="text-muted small">Create group sessions that multiple customers can book into. Assign one or more instructors per session.</p>
        <button class="btn btn-brand" data-bs-toggle="modal" data-bs-target="#addClassModal">
            <i class="bi bi-plus me-2"></i>Schedule Your First Class
        </button>
    </div>
}
else
{
    <div class="mb-3">
        <input type="text" class="form-control" id="classSearch" placeholder="Search by name or service..." aria-label="Search sessions" />
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle" id="classesTable">
            <thead class="table-light">
                <tr>
                    <th>Class</th>
                    <th>Date &amp; Time</th>
                    <th>Duration</th>
                    <th class="text-center">Capacity</th>
                    <th class="text-end">Price</th>
                    <th>Instructors</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var s in sessions)
                {
                    var id = s.GetProperty("id").GetString();
                    var name = s.TryGetProperty("name", out var nameProp) ? nameProp.GetString() ?? "" : "";
                    var desc = s.TryGetProperty("description", out var descProp) ? descProp.GetString() : null;
                    var sessionDate = s.TryGetProperty("sessionDate", out var dateProp) ? dateProp.GetString() : "";
                    var startTime = s.TryGetProperty("startTime", out var timeProp) ? timeProp.GetString() ?? "" : "";
                    var duration = s.TryGetProperty("durationMinutes", out var durProp) ? durProp.GetInt32() : 0;
                    var maxCap = s.TryGetProperty("maxCapacity", out var capProp) ? capProp.GetInt32() : 0;
                    var curBook = s.TryGetProperty("currentBookings", out var curProp) ? curProp.GetInt32() : 0;
                    var price = s.TryGetProperty("price", out var priceProp) ? priceProp.GetDecimal() : 0m;
                    var location = s.TryGetProperty("location", out var locProp) ? locProp.GetString() : null;
                    var status = s.TryGetProperty("status", out var statusProp) ? statusProp.GetInt32() : 1;
                    var serviceName = s.TryGetProperty("serviceName", out var svcProp) ? svcProp.GetString() : null;
                    var serviceId = s.TryGetProperty("serviceId", out var svcIdProp) ? svcIdProp.GetString() : null;
                    var instructorIdsRaw = s.TryGetProperty("instructorIds", out var instrProp)
                        ? instrProp.EnumerateArray().Select(x => x.GetString() ?? "").Where(x => x != "").ToList()
                        : new List<string>();
                    var instructorNames = staff
                        .Where(st => instructorIdsRaw.Contains(st.Id.ToString()))
                        .Select(st => st.FullName)
                        .ToList();

                    var parsedDate = DateTime.TryParse(sessionDate, out var dt) ? dt.ToString("d MMM yyyy") : sessionDate;
                    var statusLabel = status switch { 1 => "Scheduled", 2 => "In Progress", 3 => "Completed", 4 => "Cancelled", 5 => "Full", _ => "Unknown" };
                    var statusClass = status switch { 1 => "bg-success-subtle text-success", 4 => "bg-danger-subtle text-danger", 5 => "bg-warning-subtle text-warning", _ => "bg-secondary-subtle text-secondary" };
                    var instructorIdsJson = JsonSerializer.Serialize(instructorIdsRaw);

                    <tr>
                        <td>
                            <div class="fw-semibold">@name</div>
                            @if (serviceName != null)
                            {
                                <div class="text-muted small">@serviceName</div>
                            }
                            @if (!string.IsNullOrEmpty(location))
                            {
                                <div class="text-muted small"><i class="bi bi-geo-alt me-1"></i>@location</div>
                            }
                        </td>
                        <td>@parsedDate<br /><span class="text-muted small">@startTime</span></td>
                        <td>@duration min</td>
                        <td class="text-center">
                            <span class="badge @(curBook >= maxCap ? "bg-danger" : "bg-light text-dark border")">@curBook / @maxCap</span>
                        </td>
                        <td class="text-end fw-semibold">@(price == 0 ? "Free" : $"£{price:0.00}")</td>
                        <td>
                            @if (instructorNames.Any())
                            {
                                foreach (var instr in instructorNames)
                                {
                                    <span class="badge bg-light text-dark border me-1">@instr</span>
                                }
                            }
                            else
                            {
                                <span class="text-muted">—</span>
                            }
                        </td>
                        <td><span class="badge @statusClass">@statusLabel</span></td>
                        <td class="text-end">
                            <div class="d-flex gap-1 justify-content-end">
                                <button class="btn btn-sm btn-outline-secondary"
                                        data-session-id="@id"
                                        data-name="@name"
                                        data-description="@(desc ?? "")"
                                        data-session-date="@sessionDate"
                                        data-start-time="@startTime"
                                        data-duration="@duration"
                                        data-max-capacity="@maxCap"
                                        data-price="@price"
                                        data-location="@(location ?? "")"
                                        data-service-id="@(serviceId ?? "")"
                                        data-instructor-ids="@instructorIdsJson"
                                        onclick="openEditModal(this)"
                                        aria-label="Edit @name">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                @if (status != 4)
                                {
                                    <button class="btn btn-sm btn-outline-danger"
                                            onclick="cancelSession('@id', '@name')"
                                            aria-label="Cancel @name">
                                        <i class="bi bi-x-circle"></i>
                                    </button>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<!-- Add Class Modal -->
<div class="modal fade" id="addClassModal" tabindex="-1" aria-labelledby="addClassModalLabel" aria-modal="true" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-brand text-white">
                <h5 class="modal-title" id="addClassModalLabel"><i class="bi bi-calendar3-event me-2"></i>New Class / Session</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="addClassForm">
                <div class="modal-body p-4">
                    <div class="row g-3">
                        <div class="col-md-8">
                            <label for="addName" class="form-label fw-semibold">Class Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="addName" name="name" required aria-required="true"
                                   placeholder="e.g. Morning Yoga, Spin Class, Swimming Lesson" />
                        </div>
                        <div class="col-md-4">
                            <label for="addService" class="form-label fw-semibold">Service <span class="text-danger">*</span></label>
                            <select class="form-select" id="addService" name="serviceId" required aria-required="true">
                                <option value="">— Select service —</option>
                                @foreach (var svc in services)
                                {
                                    <option value="@svc.Id">@svc.Name</option>
                                }
                            </select>
                        </div>
                        <div class="col-12">
                            <label for="addDesc" class="form-label fw-semibold">Description</label>
                            <textarea class="form-control" id="addDesc" name="description" rows="2"
                                      placeholder="Brief description of the class..."></textarea>
                        </div>
                        <div class="col-md-4">
                            <label for="addDate" class="form-label fw-semibold">Date <span class="text-danger">*</span></label>
                            <input type="date" class="form-control" id="addDate" name="sessionDate" required aria-required="true" />
                        </div>
                        <div class="col-md-4">
                            <label for="addTime" class="form-label fw-semibold">Start Time <span class="text-danger">*</span></label>
                            <input type="time" class="form-control" id="addTime" name="startTime" required aria-required="true" />
                        </div>
                        <div class="col-md-4">
                            <label for="addDuration" class="form-label fw-semibold">Duration (minutes)</label>
                            <input type="number" class="form-control" id="addDuration" name="durationMinutes" min="5" placeholder="60" />
                        </div>
                        <div class="col-md-4">
                            <label for="addCapacity" class="form-label fw-semibold">Max Capacity</label>
                            <input type="number" class="form-control" id="addCapacity" name="maxCapacity" min="1" placeholder="20" />
                        </div>
                        <div class="col-md-4">
                            <label for="addPrice" class="form-label fw-semibold">Price (£)</label>
                            <input type="number" class="form-control" id="addPrice" name="price" min="0" step="0.01" placeholder="0.00" />
                        </div>
                        <div class="col-md-4">
                            <label for="addLocation" class="form-label fw-semibold">Location / Room</label>
                            <input type="text" class="form-control" id="addLocation" name="location" placeholder="e.g. Studio 1, Pool, Room A" />
                        </div>
                        <div class="col-12">
                            <label class="form-label fw-semibold">Instructors / Staff</label>
                            <div class="row g-2" id="addInstructorList">
                                @foreach (var s in staff.Where(s => s.IsActive))
                                {
                                    <div class="col-sm-6 col-md-4">
                                        <div class="form-check">
                                            <input class="form-check-input add-instructor-check" type="checkbox"
                                                   value="@s.Id" id="addInstr_@s.Id" />
                                            <label class="form-check-label" for="addInstr_@s.Id">@s.FullName</label>
                                        </div>
                                    </div>
                                }
                                @if (!staff.Any(s => s.IsActive))
                                {
                                    <div class="col-12 text-muted small">No active staff — <a href="/@tenantSlug/admin/Staff">add staff first</a>.</div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-brand"><i class="bi bi-check-circle me-2"></i>Create Class</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Class Modal -->
<div class="modal fade" id="editClassModal" tabindex="-1" aria-labelledby="editClassModalLabel" aria-modal="true" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-brand text-white">
                <h5 class="modal-title" id="editClassModalLabel"><i class="bi bi-pencil me-2"></i>Edit Class</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="editClassForm">
                <input type="hidden" id="editSessionId" />
                <div class="modal-body p-4">
                    <div class="row g-3">
                        <div class="col-md-8">
                            <label for="editName" class="form-label fw-semibold">Class Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="editName" name="name" required aria-required="true" />
                        </div>
                        <div class="col-md-4">
                            <label for="editService" class="form-label fw-semibold">Service</label>
                            <select class="form-select" id="editService" name="serviceId">
                                <option value="">— Select service —</option>
                                @foreach (var svc in services)
                                {
                                    <option value="@svc.Id">@svc.Name</option>
                                }
                            </select>
                        </div>
                        <div class="col-12">
                            <label for="editDesc" class="form-label fw-semibold">Description</label>
                            <textarea class="form-control" id="editDesc" name="description" rows="2"></textarea>
                        </div>
                        <div class="col-md-4">
                            <label for="editDate" class="form-label fw-semibold">Date <span class="text-danger">*</span></label>
                            <input type="date" class="form-control" id="editDate" name="sessionDate" required aria-required="true" />
                        </div>
                        <div class="col-md-4">
                            <label for="editTime" class="form-label fw-semibold">Start Time <span class="text-danger">*</span></label>
                            <input type="time" class="form-control" id="editTime" name="startTime" required aria-required="true" />
                        </div>
                        <div class="col-md-4">
                            <label for="editDuration" class="form-label fw-semibold">Duration (minutes)</label>
                            <input type="number" class="form-control" id="editDuration" name="durationMinutes" min="5" />
                        </div>
                        <div class="col-md-4">
                            <label for="editCapacity" class="form-label fw-semibold">Max Capacity</label>
                            <input type="number" class="form-control" id="editCapacity" name="maxCapacity" min="1" />
                        </div>
                        <div class="col-md-4">
                            <label for="editPrice" class="form-label fw-semibold">Price (£)</label>
                            <input type="number" class="form-control" id="editPrice" name="price" min="0" step="0.01" />
                        </div>
                        <div class="col-md-4">
                            <label for="editLocation" class="form-label fw-semibold">Location / Room</label>
                            <input type="text" class="form-control" id="editLocation" name="location" />
                        </div>
                        <div class="col-12">
                            <label class="form-label fw-semibold">Instructors / Staff</label>
                            <div class="row g-2" id="editInstructorList">
                                @foreach (var s in staff.Where(s => s.IsActive))
                                {
                                    <div class="col-sm-6 col-md-4">
                                        <div class="form-check">
                                            <input class="form-check-input edit-instructor-check" type="checkbox"
                                                   value="@s.Id" id="editInstr_@s.Id" />
                                            <label class="form-check-label" for="editInstr_@s.Id">@s.FullName</label>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-brand"><i class="bi bi-check-circle me-2"></i>Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<script>
const token = '@accessToken';
const tenantSlug = '@tenantSlug';
const apiBase = `/api/tenants/${tenantSlug}/class-sessions`;

// Search filter
document.getElementById('classSearch')?.addEventListener('input', function () {
    const q = this.value.toLowerCase();
    document.querySelectorAll('#classesTable tbody tr').forEach(row => {
        row.style.display = row.textContent.toLowerCase().includes(q) ? '' : 'none';
    });
});

function selectedInstructorIds(prefix) {
    return Array.from(document.querySelectorAll(`.${prefix}-instructor-check:checked`))
        .map(cb => cb.value);
}

// Create session
document.getElementById('addClassForm').addEventListener('submit', async function (e) {
    e.preventDefault();
    const f = e.target;
    const dateVal = f.sessionDate.value; // yyyy-MM-dd
    const timeVal = f.startTime.value;   // HH:mm
    const payload = {
        serviceId: f.serviceId.value,
        name: f.name.value.trim(),
        description: f.description.value.trim() || null,
        sessionDate: new Date(f.sessionDate.value + 'T12:00:00').toISOString(),
        startTime: timeVal,
        durationMinutes: parseInt(f.durationMinutes.value) || 0,
        maxCapacity: parseInt(f.maxCapacity.value) || 0,
        price: parseFloat(f.price.value) || 0,
        location: f.location.value.trim() || null,
        instructorIds: selectedInstructorIds('add')
    };
    const resp = await fetch(apiBase, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json', 'Authorization': 'Bearer ' + token },
        body: JSON.stringify(payload)
    });
    if (resp.ok) { location.reload(); }
    else {
        const msg = await resp.text().catch(() => '');
        alert(`Failed to create class (${resp.status})${msg ? ': ' + msg : '.'}`);
    }
});

// Open edit modal
function openEditModal(btn) {
    const d = btn.dataset;
    document.getElementById('editSessionId').value = d.sessionId;
    document.getElementById('editName').value = d.name;
    document.getElementById('editDesc').value = d.description;
    document.getElementById('editService').value = d.serviceId;
    document.getElementById('editDuration').value = d.duration;
    document.getElementById('editCapacity').value = d.maxCapacity;
    document.getElementById('editPrice').value = d.price;
    document.getElementById('editLocation').value = d.location;

    // Date: parse ISO and format to yyyy-MM-dd
    const rawDate = d.sessionDate || '';
    const parsedDate = rawDate.split('T')[0];
    document.getElementById('editDate').value = parsedDate;
    document.getElementById('editTime').value = d.startTime;

    // Instructor checkboxes
    let selectedIds = [];
    try { selectedIds = JSON.parse(d.instructorIds || '[]'); } catch (e) { console.error('Failed to parse instructor IDs:', e); selectedIds = []; }
    document.querySelectorAll('.edit-instructor-check').forEach(cb => {
        cb.checked = selectedIds.includes(cb.value);
    });

    new bootstrap.Modal(document.getElementById('editClassModal')).show();
}

// Save edits
document.getElementById('editClassForm').addEventListener('submit', async function (e) {
    e.preventDefault();
    const id = document.getElementById('editSessionId').value;
    const f = e.target;
    const dateVal = f.sessionDate.value;
    const timeVal = f.startTime.value;
    const payload = {
        name: f.name.value.trim(),
        description: f.description.value.trim() || null,
        sessionDate: new Date(f.sessionDate.value + 'T12:00:00').toISOString(),
        startTime: timeVal,
        durationMinutes: parseInt(f.durationMinutes.value) || 0,
        maxCapacity: parseInt(f.maxCapacity.value) || 0,
        price: parseFloat(f.price.value) || 0,
        location: f.location.value.trim() || null,
        instructorIds: selectedInstructorIds('edit')
    };
    const resp = await fetch(`${apiBase}/${id}`, {
        method: 'PUT',
        headers: { 'Content-Type': 'application/json', 'Authorization': 'Bearer ' + token },
        body: JSON.stringify(payload)
    });
    if (resp.ok) { location.reload(); }
    else {
        const msg = await resp.text().catch(() => '');
        alert(`Failed to update class (${resp.status})${msg ? ': ' + msg : '.'}`);
    }
});

// Cancel session
async function cancelSession(id, name) {
    if (!confirm(`Cancel "${name}"? This cannot be undone.`)) return;
    const resp = await fetch(`${apiBase}/${id}`, {
        method: 'DELETE',
        headers: { 'Authorization': 'Bearer ' + token }
    });
    if (resp.ok) { location.reload(); }
    else {
        const msg = await resp.text().catch(() => '');
        alert(`Failed to cancel class (${resp.status})${msg ? ': ' + msg : '.'}`);
    }
}
</script>
}
