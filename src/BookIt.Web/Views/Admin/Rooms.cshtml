@using BookIt.Core.DTOs
@using BookIt.Core.Enums
@{
    ViewData["Title"] = "Properties & Rooms";
    Layout = "_AdminLayout";
    var tenant = ViewBag.Tenant as TenantResponse;
    var properties = ViewBag.Properties as List<LodgingPropertyResponse> ?? new();
    var amenities = ViewBag.Amenities as List<AmenityResponse> ?? new();
    var tenantSlug = ViewBag.TenantSlug as string ?? "";
    var accessToken = ViewBag.AccessToken as string ?? "";
}

<div class="page-header">
    <div>
        <h1 class="page-title">Properties &amp; Rooms</h1>
        <p class="page-subtitle">Manage your lodging properties, rooms, photos and amenities</p>
    </div>
    <button class="btn btn-brand" data-bs-toggle="modal" data-bs-target="#addPropertyModal" aria-haspopup="dialog">
        <i class="bi bi-building-add me-2"></i>Add Property
    </button>
</div>

@if (!properties.Any())
{
    <div class="text-center py-5">
        <i class="bi bi-building fs-1 text-muted d-block mb-3"></i>
        <h5 class="text-muted">No properties yet</h5>
        <p class="text-muted small">Add a property (hotel, B&amp;B, spa, gym, etc.) to start managing rooms and photos.</p>
        <button class="btn btn-brand" data-bs-toggle="modal" data-bs-target="#addPropertyModal">
            <i class="bi bi-building-add me-2"></i>Add Property
        </button>
    </div>
}
else
{
    @foreach (var prop in properties)
    {
        <div class="card mb-4">
            <div class="card-header px-4 py-3 d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center gap-3">
                    @if (!string.IsNullOrEmpty(prop.IconUrl))
                    {
                        <img src="@prop.IconUrl" alt="@prop.Name" class="rounded" style="width:40px;height:40px;object-fit:cover;" />
                    }
                    else
                    {
                        <div class="rounded bg-brand text-white d-flex align-items-center justify-content-center fw-bold"
                             style="width:40px;height:40px;font-size:.875rem;">
                            @prop.Name[0]
                        </div>
                    }
                    <div>
                        <div class="fw-semibold">@prop.Name</div>
                        <div class="small text-muted">@(prop.City)@(!string.IsNullOrEmpty(prop.City) && !string.IsNullOrEmpty(prop.Country) ? ", " : "")@(prop.Country) · @prop.RoomCount room(s)</div>
                    </div>
                </div>
                <div class="d-flex gap-2">
                    <button class="btn btn-sm btn-outline-secondary edit-prop-btn"
                            data-prop-id="@prop.Id"
                            data-name="@prop.Name"
                            data-description="@(prop.Description ?? "")"
                            data-address="@(prop.Address ?? "")"
                            data-city="@(prop.City ?? "")"
                            data-post-code="@(prop.PostCode ?? "")"
                            data-country="@(prop.Country ?? "")"
                            data-phone="@(prop.PhoneNumber ?? "")"
                            data-email="@(prop.Email ?? "")"
                            data-website="@(prop.Website ?? "")"
                            data-icon-url="@(prop.IconUrl ?? "")"
                            data-is-active="@prop.IsActive"
                            data-sort-order="@prop.SortOrder"
                            aria-label="Edit @prop.Name">
                        <i class="bi bi-pencil"></i>
                    </button>
                    <button class="btn btn-sm btn-outline-danger delete-prop-btn"
                            data-prop-id="@prop.Id"
                            data-name="@prop.Name"
                            aria-label="Delete @prop.Name">
                        <i class="bi bi-trash"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-4">
                <!-- Property Amenities -->
                <div class="mb-4">
                    <div class="d-flex align-items-center gap-2 mb-2">
                        <h6 class="fw-semibold mb-0"><i class="bi bi-stars me-1 text-brand"></i>Property Amenities</h6>
                        <button class="btn btn-sm btn-outline-secondary ms-auto"
                                onclick="openAmenitiesModal('@prop.Id', [@string.Join(",", prop.Amenities.Select(a => $"\"{a.Id}\""))])"
                                aria-label="Edit amenities for @prop.Name">
                            <i class="bi bi-pencil me-1"></i>Edit
                        </button>
                    </div>
                    @if (prop.Amenities.Any())
                    {
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var a in prop.Amenities)
                            {
                                <span class="badge bg-light text-dark border">
                                    @if (!string.IsNullOrEmpty(a.Icon)) { <i class="bi bi-@a.Icon me-1"></i> }
                                    @a.Name
                                </span>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted small mb-0">No amenities assigned. Click Edit to add.</p>
                    }
                </div>

                <!-- Property Photos -->
                <div class="mb-4">
                    <div class="d-flex align-items-center gap-2 mb-2">
                        <h6 class="fw-semibold mb-0"><i class="bi bi-images me-1 text-brand"></i>Property Photos</h6>
                        <button class="btn btn-sm btn-outline-secondary ms-auto"
                                onclick="openAddPhotoModal('property', '@prop.Id')"
                                aria-label="Add photo to @prop.Name">
                            <i class="bi bi-plus-lg me-1"></i>Add Photo
                        </button>
                    </div>
                    @if (prop.Photos.Any())
                    {
                        <div class="row g-2">
                            @foreach (var photo in prop.Photos.OrderBy(p => p.SortOrder))
                            {
                                <div class="col-6 col-md-3 col-lg-2 position-relative" id="prop-photo-@photo.Id">
                                    <div class="photo-thumb position-relative">
                                        <img src="@photo.Url" alt="@(photo.Caption ?? prop.Name)"
                                             class="img-fluid rounded w-100" style="height:110px;object-fit:cover;" />
                                        @if (photo.IsPrimary)
                                        {
                                            <span class="position-absolute top-0 start-0 badge bg-brand m-1">Primary</span>
                                        }
                                        <button class="btn btn-sm btn-danger position-absolute top-0 end-0 m-1"
                                                style="opacity:.85;"
                                                onclick="deletePropertyPhoto('@prop.Id', '@photo.Id')"
                                                aria-label="Delete photo">
                                            <i class="bi bi-x-lg"></i>
                                        </button>
                                    </div>
                                    @if (!string.IsNullOrEmpty(photo.Caption))
                                    {
                                        <div class="small text-muted text-truncate mt-1">@photo.Caption</div>
                                    }
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted small mb-0">No photos yet. Click Add Photo to upload.</p>
                    }
                </div>

                <!-- Rooms under this property -->
            </div>
        </div>
    }
}

<!-- Add Property Modal -->
<div class="modal fade" id="addPropertyModal" tabindex="-1" aria-labelledby="addPropertyModalLabel" aria-modal="true" role="dialog">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header bg-brand text-white">
                <h5 class="modal-title" id="addPropertyModalLabel"><i class="bi bi-building-add me-2"></i>Add Property</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="addPropertyForm">
                <div class="modal-body p-4">
                    @Html.AntiForgeryToken()
                    <div class="row g-3">
                        <div class="col-md-8">
                            <label for="addPropName" class="form-label fw-semibold">Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="addPropName" name="name" required />
                        </div>
                        <div class="col-md-4">
                            <label for="addPropSortOrder" class="form-label fw-semibold">Sort Order</label>
                            <input type="number" class="form-control" id="addPropSortOrder" name="sortOrder" value="0" min="0" />
                        </div>
                        <div class="col-12">
                            <label for="addPropDesc" class="form-label fw-semibold">Description</label>
                            <textarea class="form-control" id="addPropDesc" name="description" rows="2"></textarea>
                        </div>
                        <div class="col-12">
                            <label for="addPropAddress" class="form-label fw-semibold">Address</label>
                            <input type="text" class="form-control" id="addPropAddress" name="address" />
                        </div>
                        <div class="col-md-4">
                            <label for="addPropCity" class="form-label fw-semibold">City</label>
                            <input type="text" class="form-control" id="addPropCity" name="city" />
                        </div>
                        <div class="col-md-4">
                            <label for="addPropPostCode" class="form-label fw-semibold">Post Code</label>
                            <input type="text" class="form-control" id="addPropPostCode" name="postCode" />
                        </div>
                        <div class="col-md-4">
                            <label for="addPropCountry" class="form-label fw-semibold">Country</label>
                            <input type="text" class="form-control" id="addPropCountry" name="country" />
                        </div>
                        <div class="col-md-6">
                            <label for="addPropPhone" class="form-label fw-semibold">Phone</label>
                            <input type="tel" class="form-control" id="addPropPhone" name="phoneNumber" />
                        </div>
                        <div class="col-md-6">
                            <label for="addPropEmail" class="form-label fw-semibold">Email</label>
                            <input type="email" class="form-control" id="addPropEmail" name="email" />
                        </div>
                        <div class="col-md-6">
                            <label for="addPropWebsite" class="form-label fw-semibold">Website</label>
                            <input type="url" class="form-control" id="addPropWebsite" name="website" placeholder="https://..." />
                        </div>
                        <div class="col-md-6">
                            <label for="addPropIcon" class="form-label fw-semibold">Icon/Logo URL</label>
                            <input type="url" class="form-control" id="addPropIcon" name="iconUrl" placeholder="https://..." />
                        </div>
                        <div class="col-12">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="addPropActive" name="isActive" checked />
                                <label class="form-check-label fw-semibold" for="addPropActive">Active</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-brand"><i class="bi bi-check-circle me-2"></i>Save Property</button>
                </div>
            </form>
        </div>
    </div>
</div>

