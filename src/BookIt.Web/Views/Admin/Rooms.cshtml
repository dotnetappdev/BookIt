<!-- Assign Amenities Modal -->
<div class="modal fade" id="amenitiesModal" tabindex="-1" aria-labelledby="amenitiesModalLabel" aria-modal="true" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-brand text-white">
                <h5 class="modal-title" id="amenitiesModalLabel"><i class="bi bi-stars me-2"></i>Assign Property Amenities</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <input type="hidden" id="amenityPropId" />
                <div class="row g-2" id="amenityCheckboxes">
                    @foreach (var amenity in amenities)
                    {
                        <div class="col-md-4">
                            <div class="form-check">
                                <input class="form-check-input amenity-cb" type="checkbox"
                                       id="amenity_@amenity.Id" value="@amenity.Id" />
                                <label class="form-check-label" for="amenity_@amenity.Id">
                                    @if (!string.IsNullOrEmpty(amenity.Icon)) { <i class="bi bi-@amenity.Icon me-1"></i> }
                                    @amenity.Name
                                </label>
                            </div>
                        </div>
                    }
                </div>
                @if (!amenities.Any())
                {
                    <p class="text-muted">No amenities available. Add amenities via the API or database.</p>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-brand" onclick="saveAmenities()"><i class="bi bi-check-circle me-2"></i>Save</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
const token = '@accessToken';
const tenantSlug = '@tenantSlug';
const apiBase = `/api/tenants/${tenantSlug}/lodging`;

// ── Property CRUD ──

document.addEventListener('click', function(e) {
    const editBtn = e.target.closest('.edit-prop-btn');
    if (editBtn) {
        const d = editBtn.dataset;
        openEditPropertyModal(d.propId, d.name, d.description, d.address, d.city, d.postCode, d.country, d.phone, d.email, d.website, d.iconUrl, d.isActive, d.sortOrder);
    }
    const delBtn = e.target.closest('.delete-prop-btn');
    if (delBtn) {
        deleteProperty(delBtn.dataset.propId, delBtn.dataset.name);
    }
});

document.getElementById('addPropertyForm').addEventListener('submit', async function(e) {
    e.preventDefault();
    const f = e.target;
    const data = {
        name: f.name.value.trim(),
        description: f.description.value.trim() || null,
        address: f.address.value.trim() || null,
        city: f.city.value.trim() || null,
        postCode: f.postCode.value.trim() || null,
        country: f.country.value.trim() || null,
        phoneNumber: f.phoneNumber.value.trim() || null,
        email: f.email.value.trim() || null,
        website: f.website.value.trim() || null,
        iconUrl: f.iconUrl.value.trim() || null,
        isActive: f.isActive.checked,
        sortOrder: parseInt(f.sortOrder.value) || 0
    };
    const resp = await apiFetch(`${apiBase}/properties`, 'POST', data);
    if (resp.ok) location.reload();
    else showError(await resp.text(), 'Failed to add property');
});

function openEditPropertyModal(id, name, desc, address, city, postCode, country, phone, email, website, iconUrl, isActive, sortOrder) {
    document.getElementById('editPropId').value = id;
    document.getElementById('editPropName').value = name;
    document.getElementById('editPropDesc').value = desc;
    document.getElementById('editPropAddress').value = address;
    document.getElementById('editPropCity').value = city;
    document.getElementById('editPropPostCode').value = postCode;
    document.getElementById('editPropCountry').value = country;
    document.getElementById('editPropPhone').value = phone;
    document.getElementById('editPropEmail').value = email;
    document.getElementById('editPropWebsite').value = website;
    document.getElementById('editPropIcon').value = iconUrl;
    document.getElementById('editPropActive').checked = isActive === 'True';
    document.getElementById('editPropSortOrder').value = sortOrder;
    new bootstrap.Modal(document.getElementById('editPropertyModal')).show();
}

document.getElementById('editPropertyForm').addEventListener('submit', async function(e) {
    e.preventDefault();
    const f = e.target;
    const id = document.getElementById('editPropId').value;
    const data = {
        name: f.name.value.trim(),
        description: f.description.value.trim() || null,
        address: f.address.value.trim() || null,
        city: f.city.value.trim() || null,
        postCode: f.postCode.value.trim() || null,
        country: f.country.value.trim() || null,
        phoneNumber: f.phoneNumber.value.trim() || null,
        email: f.email.value.trim() || null,
        website: f.website.value.trim() || null,
        iconUrl: f.iconUrl.value.trim() || null,
        isActive: f.isActive.checked,
        sortOrder: parseInt(f.sortOrder.value) || 0
    };
    const resp = await apiFetch(`${apiBase}/properties/${id}`, 'PUT', data);
    if (resp.ok) location.reload();
    else showError(await resp.text(), 'Failed to update property');
});

async function deleteProperty(id, name) {
    if (!confirm(`Delete property "${name}"? This cannot be undone.`)) return;
    const resp = await apiFetch(`${apiBase}/properties/${id}`, 'DELETE');
    if (resp.ok) location.reload();
    else showError(await resp.text(), 'Failed to delete property');
}

// ── Photo Management ──

function openAddPhotoModal(type, targetId) {
    document.getElementById('photoTargetType').value = type;
    document.getElementById('photoTargetId').value = targetId;
    document.getElementById('photoUrl').value = '';
    document.getElementById('photoCaption').value = '';
    document.getElementById('photoSortOrder').value = '0';
    document.getElementById('photoIsPrimary').checked = false;
    new bootstrap.Modal(document.getElementById('addPhotoModal')).show();
}

document.getElementById('addPhotoForm').addEventListener('submit', async function(e) {
    e.preventDefault();
    const type = document.getElementById('photoTargetType').value;
    const targetId = document.getElementById('photoTargetId').value;
    const data = {
        url: document.getElementById('photoUrl').value.trim(),
        caption: document.getElementById('photoCaption').value.trim() || null,
        sortOrder: parseInt(document.getElementById('photoSortOrder').value) || 0,
        isPrimary: document.getElementById('photoIsPrimary').checked
    };
    const endpoint = type === 'property'
        ? `${apiBase}/properties/${targetId}/photos`
        : `${apiBase}/rooms/${targetId}/photos`;
    const resp = await apiFetch(endpoint, 'POST', data);
    if (resp.ok) location.reload();
    else showError(await resp.text(), 'Failed to add photo');
});

async function deletePropertyPhoto(propertyId, photoId) {
    if (!confirm('Remove this photo?')) return;
    const resp = await apiFetch(`${apiBase}/properties/${propertyId}/photos/${photoId}`, 'DELETE');
    if (resp.ok) document.getElementById(`prop-photo-${photoId}`)?.remove();
    else showError(await resp.text(), 'Failed to delete photo');
}

// ── Amenities Management ──

function openAmenitiesModal(propId, currentIds) {
    document.getElementById('amenityPropId').value = propId;
    document.querySelectorAll('.amenity-cb').forEach(cb => {
        cb.checked = currentIds.includes(cb.value);
    });
    new bootstrap.Modal(document.getElementById('amenitiesModal')).show();
}

async function saveAmenities() {
    const propId = document.getElementById('amenityPropId').value;
    const selected = [...document.querySelectorAll('.amenity-cb:checked')].map(cb => cb.value);
    const resp = await apiFetch(`${apiBase}/properties/${propId}/amenities`, 'POST', { amenityIds: selected });
    if (resp.ok) location.reload();
    else showError(await resp.text(), 'Failed to save amenities');
}

// ── Helpers ──

async function apiFetch(url, method, body) {
    return fetch(url, {
        method,
        headers: { 'Content-Type': 'application/json', 'Authorization': 'Bearer ' + token },
        body: body ? JSON.stringify(body) : undefined
    });
}

function showError(msg, prefix) {
    alert(`${prefix}${msg ? ': ' + msg : '.'}`);
}
</script>
}
