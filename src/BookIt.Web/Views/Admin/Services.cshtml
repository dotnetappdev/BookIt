@using BookIt.Core.DTOs
@{
    ViewData["Title"] = "Manage Services";
    Layout = "_AdminLayout";
    var tenant = ViewBag.Tenant as TenantResponse;
    var services = ViewBag.Services as List<ServiceResponse> ?? new();
    var tenantSlug = ViewBag.TenantSlug as string ?? "";
    var accessToken = Context.Session.GetString("AccessToken") ?? "";
}

<div class="page-header">
    <div>
        <h1 class="page-title">Services</h1>
        <p class="page-subtitle">Manage your service offerings</p>
    </div>
    <button class="btn btn-brand" data-bs-toggle="modal" data-bs-target="#addServiceModal" aria-haspopup="dialog">
        <i class="bi bi-plus-circle me-2"></i>Add Service
    </button>
</div>

<div>
    @if (!services.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-grid fs-1 text-muted d-block mb-3"></i>
            <h5 class="text-muted">No services yet</h5>
            <button class="btn btn-brand" data-bs-toggle="modal" data-bs-target="#addServiceModal">
                <i class="bi bi-plus me-2"></i>Add Your First Service
            </button>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var service in services)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card border-0 shadow-sm h-100">
                        @if (!string.IsNullOrEmpty(service.ImageUrl))
                        {
                            <img src="@service.ImageUrl" class="card-img-top" style="height: 160px; object-fit: cover;" alt="@service.Name" />
                        }
                        else
                        {
                            <div class="bg-light d-flex align-items-center justify-content-center" style="height: 80px;">
                                <i class="bi bi-scissors fs-2 text-muted"></i>
                            </div>
                        }
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <h6 class="fw-bold mb-1">@service.Name</h6>
                                    @if (!string.IsNullOrEmpty(service.CategoryName))
                                    {
                                        <span class="badge bg-light text-dark border mb-2">@service.CategoryName</span>
                                    }
                                </div>
                                <div class="fw-bold fs-5 text-brand">£@service.Price.ToString("0.00")</div>
                            </div>
                            @if (!string.IsNullOrEmpty(service.Description))
                            {
                                <p class="text-muted small mb-2">@service.Description</p>
                            }
                            <div class="d-flex gap-2 flex-wrap mb-2">
                                <span class="badge bg-light text-dark border small">
                                    <i class="bi bi-clock me-1"></i>@service.DurationMinutes min
                                </span>
                                <span class="badge @(service.AllowOnlineBooking ? "bg-success" : "bg-secondary") small">
                                    @(service.AllowOnlineBooking ? "Online Booking" : "In-Store Only")
                                </span>
                            </div>
                            @if (!string.IsNullOrEmpty(service.Slug))
                            {
                                <div class="d-flex align-items-center gap-1 mt-2">
                                    <a href="/@tenantSlug/book/@service.Slug" target="_blank"
                                       class="small text-muted text-truncate" style="max-width:160px;" title="/@tenantSlug/book/@service.Slug">
                                        <i class="bi bi-link-45deg me-1"></i>/@tenantSlug/book/@service.Slug
                                    </a>
                                    <button class="btn btn-sm btn-link p-0 ms-1" onclick="copyBookingLink('/@tenantSlug/book/@service.Slug')" title="Copy booking link">
                                        <i class="bi bi-clipboard text-muted"></i>
                                    </button>
                                </div>
                            }
                        </div>
                        <div class="card-footer border-0 pb-3">
                            <button class="btn btn-sm btn-outline-secondary w-100"
                                    data-service-id="@service.Id"
                                    data-name="@service.Name"
                                    data-slug="@(service.Slug ?? "")"
                                    data-price="@service.Price"
                                    data-duration-minutes="@service.DurationMinutes"
                                    data-description="@(service.Description ?? "")"
                                    data-image-url="@(service.ImageUrl ?? "")"
                                    data-allow-online-booking="@service.AllowOnlineBooking.ToString().ToLower()"
                                    onclick="openEditServiceModal(this)"
                                    aria-label="Edit @service.Name">
                                <i class="bi bi-pencil me-1"></i>Edit
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<!-- Add Service Modal -->
<div class="modal fade" id="addServiceModal" tabindex="-1" aria-labelledby="addServiceModalLabel" aria-modal="true" role="dialog">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header bg-brand text-white">
                <h5 class="modal-title" id="addServiceModalLabel"><i class="bi bi-plus-circle me-2"></i>Add New Service</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="addServiceForm">
                <div class="modal-body p-4">
                    <div class="admin-form-grid">
                        <div class="afc-8">
                            <label for="serviceName" class="form-label fw-semibold">Service Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="serviceName" name="name" required aria-required="true" />
                        </div>
                        <div class="afc-4">
                            <label for="servicePrice" class="form-label fw-semibold">Price (£) <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" id="servicePrice" name="price" min="0" step="0.01" required aria-required="true" />
                        </div>
                        <div class="afc-12">
                            <label for="serviceSlug" class="form-label fw-semibold">
                                URL Slug <span class="text-muted fw-normal small">(auto-generated from name)</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text text-muted small">/@tenantSlug/book/</span>
                                <input type="text" class="form-control" id="serviceSlug" name="slug"
                                       placeholder="e.g. mens-haircut"
                                       pattern="[a-z0-9\-]+" title="Lowercase letters, numbers and hyphens only" />
                            </div>
                            <div class="form-text">Used in the public booking URL for SEO. Leave blank to auto-generate.</div>
                        </div>
                        <div>
                            <label for="serviceDuration" class="form-label fw-semibold">Duration (minutes) <span class="text-danger">*</span></label>
                            <select class="form-select" id="serviceDuration" name="durationMinutes" required aria-required="true">
                                <option value="15">15 minutes</option>
                                <option value="30">30 minutes</option>
                                <option value="45">45 minutes</option>
                                <option value="60" selected>1 hour</option>
                                <option value="90">1.5 hours</option>
                                <option value="120">2 hours</option>
                            </select>
                        </div>
                        <div>
                            <label for="serviceBuffer" class="form-label fw-semibold">Buffer Time (minutes)</label>
                            <input type="number" class="form-control" id="serviceBuffer" name="bufferMinutes" min="0" value="0" />
                            <div class="form-text">Cleanup/prep time between appointments</div>
                        </div>
                        <div class="afc-12">
                            <label for="serviceDescription" class="form-label fw-semibold">Description</label>
                            <textarea class="form-control" id="serviceDescription" name="description" rows="3"></textarea>
                        </div>
                        <div>
                            <label for="serviceImage" class="form-label fw-semibold">Image URL</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-image"></i></span>
                                <input type="url" class="form-control" id="serviceImage" name="imageUrl" placeholder="https://..." />
                            </div>
                        </div>
                        <div class="admin-check-cell">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="allowOnline" name="allowOnlineBooking" checked />
                                <label class="form-check-label fw-semibold" for="allowOnline">Allow Online Booking</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-brand">
                        <i class="bi bi-check-circle me-2"></i>Save Service
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Service Modal -->
<div class="modal fade" id="editServiceModal" tabindex="-1" aria-labelledby="editServiceModalLabel" aria-modal="true" role="dialog">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header bg-brand text-white">
                <h5 class="modal-title" id="editServiceModalLabel"><i class="bi bi-pencil me-2"></i>Edit Service</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="editServiceForm">
                <input type="hidden" id="editServiceId" />
                <div class="modal-body p-4">
                    <div class="admin-form-grid">
                        <div class="afc-8">
                            <label for="editServiceName" class="form-label fw-semibold">Service Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="editServiceName" name="name" required aria-required="true" />
                        </div>
                        <div class="afc-4">
                            <label for="editServicePrice" class="form-label fw-semibold">Price (£) <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" id="editServicePrice" name="price" min="0" step="0.01" required aria-required="true" />
                        </div>
                        <div class="afc-12">
                            <label for="editServiceSlug" class="form-label fw-semibold">
                                URL Slug <span class="text-muted fw-normal small">(leave blank to keep current)</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text text-muted small">/@tenantSlug/book/</span>
                                <input type="text" class="form-control" id="editServiceSlug" name="slug"
                                       pattern="[a-z0-9\-]+" title="Lowercase letters, numbers and hyphens only" />
                            </div>
                        </div>
                        <div>
                            <label for="editServiceDuration" class="form-label fw-semibold">Duration (minutes) <span class="text-danger">*</span></label>
                            <select class="form-select" id="editServiceDuration" name="durationMinutes" required aria-required="true">
                                <option value="15">15 minutes</option>
                                <option value="30">30 minutes</option>
                                <option value="45">45 minutes</option>
                                <option value="60">1 hour</option>
                                <option value="90">1.5 hours</option>
                                <option value="120">2 hours</option>
                            </select>
                        </div>
                        <div>
                            <label for="editServiceBuffer" class="form-label fw-semibold">Buffer Time (minutes)</label>
                            <input type="number" class="form-control" id="editServiceBuffer" name="bufferMinutes" min="0" value="0" />
                        </div>
                        <div class="afc-12">
                            <label for="editServiceDescription" class="form-label fw-semibold">Description</label>
                            <textarea class="form-control" id="editServiceDescription" name="description" rows="3"></textarea>
                        </div>
                        <div>
                            <label for="editServiceImage" class="form-label fw-semibold">Image URL</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-image"></i></span>
                                <input type="url" class="form-control" id="editServiceImage" name="imageUrl" placeholder="https://..." />
                            </div>
                        </div>
                        <div class="admin-check-cell">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="editAllowOnline" name="allowOnlineBooking" />
                                <label class="form-check-label fw-semibold" for="editAllowOnline">Allow Online Booking</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-danger me-auto" onclick="deleteService()">
                        <i class="bi bi-trash me-1"></i>Delete
                    </button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-brand">
                        <i class="bi bi-check-circle me-2"></i>Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<script>
const serviceToken = '@accessToken';
const serviceApiBase = '/api/tenants/@tenantSlug/services';

// Auto-generate slug from service name
document.getElementById('serviceName').addEventListener('input', function() {
    const slugField = document.getElementById('serviceSlug');
    if (!slugField._userEdited) {
        slugField.value = generateSlug(this.value);
    }
});

document.getElementById('serviceSlug').addEventListener('input', function() {
    this._userEdited = this.value.length > 0;
    const pos = this.selectionStart;
    const sanitized = this.value.toLowerCase().replace(/[^a-z0-9-]/g, '-').replace(/-{2,}/g, '-');
    if (sanitized !== this.value) {
        this.value = sanitized;
        this.setSelectionRange(pos, pos);
    }
});

function generateSlug(text) {
    return text.toLowerCase()
        .replace(/['\u2018\u2019]/g, '')
        .replace(/[^a-z0-9]+/g, '-')
        .replace(/^-+|-+$/g, '')
        .replace(/-{2,}/g, '-');
}

document.getElementById('addServiceForm').addEventListener('submit', async function(e) {
    e.preventDefault();
    const form = e.target;
    const data = {
        name: form.name.value,
        slug: form.slug.value || null,
        price: parseFloat(form.price.value),
        durationMinutes: parseInt(form.durationMinutes.value),
        bufferMinutes: parseInt(form.bufferMinutes.value) || 0,
        description: form.description.value || null,
        imageUrl: form.imageUrl.value || null,
        allowOnlineBooking: form.allowOnlineBooking.checked
    };
    const resp = await fetch(serviceApiBase, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json', 'Authorization': 'Bearer ' + serviceToken },
        body: JSON.stringify(data)
    });
    if (resp.ok) {
        location.reload();
    } else {
        alert('Failed to create service. Please check your input.');
    }
});

function openEditServiceModal(btn) {
    document.getElementById('editServiceId').value = btn.dataset.serviceId;
    document.getElementById('editServiceName').value = btn.dataset.name;
    document.getElementById('editServicePrice').value = btn.dataset.price;
    document.getElementById('editServiceDuration').value = btn.dataset.durationMinutes;
    document.getElementById('editServiceSlug').value = btn.dataset.slug;
    document.getElementById('editServiceDescription').value = btn.dataset.description;
    document.getElementById('editServiceImage').value = btn.dataset.imageUrl;
    document.getElementById('editAllowOnline').checked = btn.dataset.allowOnlineBooking === 'true';
    document.getElementById('editServiceBuffer').value = 0;
    new bootstrap.Modal(document.getElementById('editServiceModal')).show();
}

document.getElementById('editServiceForm').addEventListener('submit', async function(e) {
    e.preventDefault();
    const id = document.getElementById('editServiceId').value;
    const form = e.target;
    const data = {
        name: form.name.value,
        slug: form.slug.value || null,
        price: parseFloat(form.price.value),
        durationMinutes: parseInt(form.durationMinutes.value),
        bufferMinutes: parseInt(form.bufferMinutes.value) || 0,
        description: form.description.value || null,
        imageUrl: form.imageUrl.value || null,
        allowOnlineBooking: form.allowOnlineBooking.checked
    };
    const resp = await fetch(`${serviceApiBase}/${id}`, {
        method: 'PUT',
        headers: { 'Content-Type': 'application/json', 'Authorization': 'Bearer ' + serviceToken },
        body: JSON.stringify(data)
    });
    if (resp.ok) {
        location.reload();
    } else {
        alert('Failed to update service. Please check your input.');
    }
});

async function deleteService() {
    const id = document.getElementById('editServiceId').value;
    const name = document.getElementById('editServiceName').value;
    if (!confirm(`Delete "${name}"? This cannot be undone.`)) return;
    const resp = await fetch(`${serviceApiBase}/${id}`, {
        method: 'DELETE',
        headers: { 'Authorization': 'Bearer ' + serviceToken }
    });
    if (resp.ok) {
        location.reload();
    } else {
        alert('Failed to delete service.');
    }
}

function copyBookingLink(url) {
    navigator.clipboard.writeText(window.location.origin + url).then(() => {
        alert('Booking link copied!\n\n' + window.location.origin + url);
    });
}
</script>
}
