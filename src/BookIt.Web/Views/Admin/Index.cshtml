@using BookIt.Core.DTOs
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_AdminLayout";
    var tenant = ViewBag.Tenant as TenantResponse;
    var todayAppts = ViewBag.TodayAppointments as List<AppointmentResponse> ?? new();
    var upcomingAppts = ViewBag.UpcomingAppointments as List<AppointmentResponse> ?? new();
    var tenantSlug = ViewBag.TenantSlug as string ?? "";
    var userName = ViewBag.UserName as string ?? "";
    var allAppts = todayAppts.Concat(upcomingAppts).ToList();
    var totalRevenue = allAppts.Sum(a => a.TotalAmount);
    var unpaidCount = allAppts.Count(a => a.PaymentStatus == BookIt.Core.Enums.PaymentStatus.Unpaid);
}

<div class="page-header">
    <div>
        <h1 class="page-title">Dashboard</h1>
        <p class="page-subtitle">Welcome back, @userName</p>
    </div>
    <div class="d-flex gap-2">
        <a href="/@tenantSlug/book" target="_blank" class="btn btn-outline-secondary d-flex align-items-center gap-2">
            <i class="bi bi-box-arrow-up-right"></i><span class="d-none d-sm-inline">View Booking Page</span>
        </a>
    </div>
</div>

<!-- Stats Row -->
<div class="row g-3 mb-4">
    <div class="col-sm-6 col-lg-3">
        <div class="stat-card stat-primary">
            <div class="stat-card-inner">
                <div class="stat-icon" style="background:var(--primary-subtle);color:var(--primary);">
                    <i class="bi bi-calendar-check"></i>
                </div>
                <div>
                    <div class="stat-value">@todayAppts.Count</div>
                    <div class="stat-label">Today's Appointments</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-lg-3">
        <div class="stat-card stat-success">
            <div class="stat-card-inner">
                <div class="stat-icon" style="background:#d1fae5;color:var(--success);">
                    <i class="bi bi-calendar3"></i>
                </div>
                <div>
                    <div class="stat-value">@upcomingAppts.Count</div>
                    <div class="stat-label">Upcoming (30 days)</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-lg-3">
        <div class="stat-card stat-info">
            <div class="stat-card-inner">
                <div class="stat-icon" style="background:#dbeafe;color:var(--info);">
                    <i class="bi bi-currency-pound"></i>
                </div>
                <div>
                    <div class="stat-value" style="font-size:1.375rem;">£@totalRevenue.ToString("N0")</div>
                    <div class="stat-label">Revenue (30 days)</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-lg-3">
        <div class="stat-card stat-warning">
            <div class="stat-card-inner">
                <div class="stat-icon" style="background:#fef3c7;color:var(--warning);">
                    <i class="bi bi-exclamation-circle"></i>
                </div>
                <div>
                    <div class="stat-value">@unpaidCount</div>
                    <div class="stat-label">Unpaid</div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <!-- Today's Schedule -->
    <div class="col-lg-7">
        <div class="card h-100">
            <div class="card-header px-4 py-3 d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center gap-2">
                    <i class="bi bi-calendar-day text-brand"></i>
                    <span class="fw-semibold">Today — @DateTime.Today.ToString("dddd, d MMMM")</span>
                </div>
                <a asp-controller="Admin" asp-action="Calendar" asp-route-tenantSlug="@tenantSlug" class="btn btn-sm btn-outline-secondary">
                    Full Calendar
                </a>
            </div>
            <div class="card-body p-4">
                @if (!todayAppts.Any())
                {
                    <div class="text-center py-5 text-muted">
                        <i class="bi bi-calendar2-check fs-1 d-block mb-3 opacity-25"></i>
                        <p class="fw-medium mb-1">No appointments today</p>
                        <p class="small">Share your booking page to get appointments</p>
                    </div>
                }
                else
                {
                    @foreach (var apt in todayAppts.OrderBy(a => a.StartTime))
                    {
                        <div class="appointment-row d-flex align-items-center gap-3">
                            <div class="text-center flex-shrink-0" style="min-width:52px;">
                                <div class="fw-bold" style="font-size:.9375rem;">@apt.StartTime.ToString("h:mm")</div>
                                <div class="small text-muted">@apt.StartTime.ToString("tt")</div>
                            </div>
                            <div class="flex-grow-1 min-width-0">
                                <div class="fw-semibold" style="white-space:nowrap;overflow:hidden;text-overflow:ellipsis;">@apt.CustomerName</div>
                                <div class="small text-muted">@string.Join(", ", apt.Services.Select(s => s.Name))</div>
                            </div>
                            <div class="text-end flex-shrink-0">
                                <span class="badge @(apt.Status == BookIt.Core.Enums.AppointmentStatus.Confirmed ? "bg-success" : apt.Status == BookIt.Core.Enums.AppointmentStatus.Pending ? "bg-warning text-dark" : "bg-secondary")">
                                    @apt.Status
                                </span>
                                <div class="small fw-bold mt-1">£@apt.TotalAmount.ToString("0.00")</div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>

    <!-- Right Column -->
    <div class="col-lg-5 d-flex flex-column gap-4">
        <!-- Quick Actions -->
        <div class="card">
            <div class="card-header px-4 py-3 d-flex align-items-center gap-2">
                <i class="bi bi-lightning text-brand"></i>
                <span class="fw-semibold">Quick Actions</span>
            </div>
            <div class="card-body p-3">
                <div class="d-grid gap-2">
                    <a asp-controller="Admin" asp-action="Calendar" asp-route-tenantSlug="@tenantSlug" class="btn btn-outline-secondary text-start d-flex align-items-center gap-2">
                        <i class="bi bi-calendar3 text-brand"></i>View Full Calendar
                    </a>
                    <a asp-controller="Admin" asp-action="Services" asp-route-tenantSlug="@tenantSlug" class="btn btn-outline-secondary text-start d-flex align-items-center gap-2">
                        <i class="bi bi-grid text-brand"></i>Manage Services
                    </a>
                    <a asp-controller="Admin" asp-action="Settings" asp-route-tenantSlug="@tenantSlug" class="btn btn-outline-secondary text-start d-flex align-items-center gap-2">
                        <i class="bi bi-gear text-brand"></i>Business Settings
                    </a>
                    <a href="/@tenantSlug/book" target="_blank" class="btn btn-brand text-start d-flex align-items-center gap-2">
                        <i class="bi bi-link-45deg"></i>Open Booking Page
                    </a>
                </div>
            </div>
        </div>

        <!-- Embed widget -->
        <div class="card">
            <div class="card-header px-4 py-3 d-flex align-items-center gap-2">
                <i class="bi bi-code-slash text-brand"></i>
                <span class="fw-semibold">Embed Widget</span>
            </div>
            <div class="card-body p-4">
                <p class="small text-muted mb-3">Add this snippet to your website to embed the booking widget:</p>
                <div class="code-block mb-3" id="embedCode">
                    &lt;iframe src="@(Context.Request.Scheme)://@(Context.Request.Host)/@tenantSlug/book/widget" width="100%" height="600" frameborder="0" allow="payment"&gt;&lt;/iframe&gt;
                </div>
                <button class="btn btn-sm btn-outline-secondary" onclick="copyEmbedCode()" aria-label="Copy embed code">
                    <i class="bi bi-clipboard me-1"></i>Copy Code
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
function copyEmbedCode() {
    const code = document.getElementById('embedCode').innerText;
    navigator.clipboard.writeText(code).then(() => {
        const btn = event.target.closest('button');
        btn.innerHTML = '<i class="bi bi-check2 me-1"></i>Copied!';
        setTimeout(() => btn.innerHTML = '<i class="bi bi-clipboard me-1"></i>Copy Code', 2000);
    });
}
</script>
}
