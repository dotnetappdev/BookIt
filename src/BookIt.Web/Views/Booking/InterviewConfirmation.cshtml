@{
    ViewData["Title"] = "Interview Scheduled!";
    Layout = null;
    var tenantSlug = ViewBag.TenantSlug as string ?? "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Interview Scheduled!</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body style="background:#f8f9fc;min-height:100vh;display:flex;align-items:center;justify-content:center;">
<div style="max-width:480px;width:100%;margin:auto;padding:2rem 1rem;text-align:center;">
    <div style="width:80px;height:80px;border-radius:50%;background:linear-gradient(135deg,#d1fae5,#a7f3d0);display:flex;align-items:center;justify-content:center;margin:0 auto 1.5rem;box-shadow:0 0 0 12px #d1fae530;">
        <i class="bi bi-calendar-check-fill text-success" style="font-size:2.2rem;"></i>
    </div>
    <h1 style="font-size:1.75rem;font-weight:700;color:#1e293b;letter-spacing:-.03em;margin-bottom:.5rem;">Interview Scheduled!</h1>
    <p class="text-muted" style="font-size:.9375rem;line-height:1.7;margin-bottom:2rem;">
        Your interview has been confirmed. A calendar invite has been sent to your email address with all the details.
    </p>
    <div style="background:white;border-radius:12px;border:1px solid #e2e8f0;padding:1.5rem;margin-bottom:1.5rem;text-align:left;">
        <div class="d-flex align-items-center gap-2 mb-2">
            <i class="bi bi-check-circle-fill text-success"></i>
            <span class="fw-semibold" style="color:#1e293b;">What happens next?</span>
        </div>
        <ul class="list-unstyled mb-0" style="color:#475569;font-size:.875rem;">
            <li class="d-flex align-items-start gap-2 mb-2"><i class="bi bi-envelope mt-1 text-brand"></i>Check your email for a confirmation with interview details</li>
            <li class="d-flex align-items-start gap-2 mb-2"><i class="bi bi-calendar2 mt-1 text-brand"></i>The interview slot is now reserved for you</li>
            <li class="d-flex align-items-start gap-2"><i class="bi bi-telephone mt-1 text-brand"></i>If you need to reschedule, contact the recruiter directly</li>
        </ul>
    </div>
    <p class="text-muted small">Powered by <strong class="text-brand">BookIt</strong></p>
</div>
</body>
</html>
