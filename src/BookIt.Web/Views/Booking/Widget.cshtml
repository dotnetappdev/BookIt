@using BookIt.Core.DTOs
@{
    Layout = null;
    var tenant = ViewBag.Tenant as TenantResponse;
    var services = ViewBag.Services as List<ServiceResponse> ?? new();
    var tenantSlug = ViewBag.TenantSlug as string ?? "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Book - @tenant?.Name</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <style>
        :root { --primary: @(tenant?.PrimaryColor ?? "#6c5ce7"); }
        body { background: transparent; font-family: system-ui, -apple-system, sans-serif; }
        .btn-brand { background-color: var(--primary); color: #fff; border: none; }
        .btn-brand:hover { opacity: 0.9; color: #fff; }
        .service-card { cursor: pointer; border: 2px solid #e9ecef; border-radius: 12px; transition: all 0.2s; }
        .service-card:hover { border-color: var(--primary); transform: translateY(-2px); }
        .service-card.selected { border-color: var(--primary); background: rgba(108,92,231,.05); }
        .widget-header { background: var(--primary); color: white; border-radius: 12px 12px 0 0; padding: 16px 20px; }
    </style>
</head>
<body>
    <div style="max-width: 500px; margin: 0 auto; padding: 8px;">
        <div class="widget-header">
            <div class="d-flex align-items-center gap-2">
                @if (!string.IsNullOrEmpty(tenant?.LogoUrl))
                {
                    <img src="@tenant.LogoUrl" alt="@tenant.Name" style="width:32px; height:32px; border-radius:50%; object-fit:cover;" />
                }
                <div>
                    <strong>@tenant?.Name</strong>
                    <div style="font-size:0.8rem; opacity:0.85;">Book an Appointment</div>
                </div>
            </div>
        </div>

        <div class="border border-top-0 rounded-bottom p-3">
            @if (!services.Any())
            {
                <p class="text-center text-muted py-3">No services available</p>
            }
            else
            {
                <p class="fw-semibold mb-3 small text-muted">Select a service:</p>
                @foreach (var service in services.Take(6))
                {
                    <div class="service-card p-3 mb-2 d-flex justify-content-between align-items-center"
                         onclick="bookService('@service.Id')"
                         role="button" tabindex="0"
                         onkeypress="if(event.key==='Enter') bookService('@service.Id')"
                         aria-label="Book @service.Name, @service.DurationMinutes minutes, £@service.Price">
                        <div>
                            <div class="fw-semibold small">@service.Name</div>
                            <div class="text-muted" style="font-size:0.75rem;">@service.DurationMinutes min</div>
                        </div>
                        <div class="fw-bold" style="color: var(--primary);">£@service.Price.ToString("0.00")</div>
                    </div>
                }
                <a href="/@tenantSlug/book" target="_blank" class="btn btn-brand btn-sm w-100 mt-2">
                    View All Services
                </a>
            }
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
    function bookService(serviceId) {
        const today = new Date().toISOString().split('T')[0];
        window.open(`/booking/selectslot?serviceId=${serviceId}&date=${today}`, '_blank');
    }
    </script>
</body>
</html>
