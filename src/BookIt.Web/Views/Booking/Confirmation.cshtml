@{
    ViewData["Title"] = "Booking Confirmed!";
    var tenant = ViewBag.Tenant as BookIt.Core.DTOs.TenantResponse;
    var token = ViewBag.Token as string;
    var tenantSlug = ViewBag.TenantSlug as string;
    var bookingPin = ViewBag.BookingPin as string;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 text-center">
            <div class="card border-0 shadow-lg p-5" style="border-radius: 20px;">
                <div class="mb-4">
                    <div class="rounded-circle bg-success bg-opacity-10 d-inline-flex align-items-center justify-content-center mx-auto"
                         style="width: 80px; height: 80px;">
                        <i class="bi bi-check-circle-fill text-success" style="font-size: 2.5rem;"></i>
                    </div>
                </div>
                <h2 class="fw-bold mb-2">Booking Confirmed!</h2>
                <p class="text-muted mb-4">Your appointment has been successfully booked. We've sent a confirmation to your email.</p>

                @if (!string.IsNullOrEmpty(token))
                {
                    <div class="alert alert-light border mb-4">
                        <div class="small text-muted mb-1">Confirmation Reference</div>
                        <div class="fw-bold fs-4 font-monospace text-brand">@token</div>
                    </div>
                }

                @if (!string.IsNullOrEmpty(bookingPin))
                {
                    <div class="mt-4 p-4 rounded-3 text-center" style="background: linear-gradient(135deg, var(--primary-subtle, #f0eeff), white); border: 2px solid var(--primary, #6c5ce7);">
                        <p class="small text-muted mb-1 fw-semibold text-uppercase" style="letter-spacing:.08em;">Your Booking PIN</p>
                        <div style="font-size:2rem; font-weight:800; letter-spacing:.3em; color:var(--primary,#6c5ce7); font-family:monospace;">
                            @bookingPin
                        </div>
                        <p class="small text-muted mt-2 mb-0">
                            <i class="bi bi-shield-check me-1"></i>Use this PIN to look up or manage your booking via our chat assistant
                        </p>
                    </div>
                }

                <div class="d-grid gap-2">
                    <a href="/@tenantSlug/book" class="btn btn-brand btn-lg">
                        <i class="bi bi-plus-circle me-2"></i>Book Another Appointment
                    </a>
                    <a href="/" class="btn btn-outline-secondary">
                        <i class="bi bi-house me-2"></i>Back to Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
