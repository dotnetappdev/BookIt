@{
    ViewData["Title"] = "BookIt — Smart Booking CRM";
}

<!-- Hero -->
<section class="hero-section py-5">
    <div class="container py-4" style="position:relative;z-index:1;">
        <div class="row align-items-center g-5">
            <div class="col-lg-6">
                <div class="hero-badge">
                    <i class="bi bi-stars"></i>Online Bookings, Made Simple
                </div>
                <h1 class="hero-title">
                    Your business,<br><span>fully booked.</span>
                </h1>
                <p class="hero-subtitle">The smart booking CRM for barbers, salons, spas, gyms and more. Accept appointments 24/7, manage your calendar, and get paid online.</p>
                <div class="d-flex gap-3 flex-wrap">
                    <a asp-controller="Home" asp-action="Setup" class="btn btn-brand btn-lg px-4 py-3" style="font-size:1rem;">
                        <i class="bi bi-rocket-takeoff me-2"></i>Get Started Free
                    </a>
                    <a href="#features" class="btn btn-lg px-4 py-3" style="background:rgba(255,255,255,.1);border:1px solid rgba(255,255,255,.2);color:white;font-size:1rem;">
                        <i class="bi bi-play-circle me-2"></i>See How It Works
                    </a>
                </div>
                <div class="d-flex gap-4 mt-4">
                    @foreach (var item in new[] { "No credit card", "Free setup", "Cancel anytime" })
                    {
                        <div class="d-flex align-items-center gap-1" style="color:rgba(255,255,255,.6);font-size:.875rem;">
                            <i class="bi bi-check2 text-success"></i>@item
                        </div>
                    }
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-card">
                    <div class="hero-card-header">
                        <div class="hero-card-dot" style="background:#ff5f57;"></div>
                        <div class="hero-card-dot" style="background:#febc2e;"></div>
                        <div class="hero-card-dot" style="background:#28c840;"></div>
                        <span style="color:rgba(255,255,255,.5);font-size:.8rem;margin-left:.5rem;">Demo Barber Shop — Booking</span>
                    </div>
                    <div class="hero-card-inner">
                        <p style="color:rgba(255,255,255,.5);font-size:.8125rem;margin-bottom:1rem;">Try the live demo with <strong style="color:white;">demo-barber</strong> slug</p>
                        <a href="/demo-barber/book" class="btn btn-brand w-100 mb-2 py-2">
                            <i class="bi bi-calendar-plus me-2"></i>Book a Demo Appointment
                        </a>
                        <a href="/demo-barber/admin" class="btn w-100 py-2" style="background:rgba(255,255,255,.08);border:1px solid rgba(255,255,255,.15);color:rgba(255,255,255,.8);">
                            <i class="bi bi-speedometer2 me-2"></i>View Admin Dashboard
                        </a>
                        <div class="mt-3 p-2 rounded-2 text-center" style="background:rgba(255,255,255,.05);border:1px solid rgba(255,255,255,.08);">
                            <span style="color:rgba(255,255,255,.5);font-size:.75rem;">Admin: admin@demo-barber.com / Admin123!</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Industries -->
<section class="py-5" style="background:var(--surface);">
    <div class="container">
        <div class="text-center mb-5">
            <div class="section-eyebrow">Who It's For</div>
            <h2 class="section-title">Built for every service business</h2>
        </div>
        <div class="row g-3">
            @foreach (var ind in new[] {
                new { Icon = "bi-scissors", Name = "Barbers", Color = "#6c5ce7", Bg = "#f0eeff" },
                new { Icon = "bi-stars", Name = "Hair Salons", Color = "#e17055", Bg = "#fef3f0" },
                new { Icon = "bi-heart-pulse", Name = "Spas & Massage", Color = "#00b894", Bg = "#edfff8" },
                new { Icon = "bi-trophy", Name = "Gyms & PT", Color = "#0984e3", Bg = "#edf5ff" },
                new { Icon = "bi-gem", Name = "Nail Salons", Color = "#e84393", Bg = "#fff0f7" },
                new { Icon = "bi-person-badge", Name = "Tattoo Studios", Color = "#2d3436", Bg = "#f4f4f4" }
            })
            {
                <div class="col-6 col-md-4 col-lg-2">
                    <div class="industry-chip" style="text-decoration:none;">
                        <div style="width:52px;height:52px;border-radius:12px;background:@ind.Bg;display:flex;align-items:center;justify-content:center;">
                            <i class="bi @ind.Icon" style="font-size:1.5rem;color:@ind.Color;"></i>
                        </div>
                        <span class="fw-semibold" style="font-size:.875rem;">@ind.Name</span>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Features -->
<section id="features" class="py-5" style="background:var(--surface-2);">
    <div class="container">
        <div class="text-center mb-5">
            <div class="section-eyebrow">Features</div>
            <h2 class="section-title">Everything you need to grow</h2>
            <p class="text-muted mt-2 mx-auto" style="max-width:500px;">Powerful tools to manage bookings, staff and payments without the complexity.</p>
        </div>
        <div class="row g-4">
            @foreach (var f in new[] {
                new { Icon = "bi-calendar3", Title = "Smart Calendar", Desc = "Full week and month view with FullCalendar.js. Drag-and-drop appointments and availability management." },
                new { Icon = "bi-credit-card", Title = "Stripe & PayPal", Desc = "Accept Stripe, PayPal and Apple Pay. Require upfront payment or pay at the appointment." },
                new { Icon = "bi-people", Title = "Staff Management", Desc = "Multiple staff with individual schedules, services and availability windows." },
                new { Icon = "bi-phone", Title = "Embeddable Widget", Desc = "Add a booking widget to any website. Fully customisable with your brand colours." },
                new { Icon = "bi-building", Title = "Multi-Tenant", Desc = "One platform, unlimited businesses. Each tenant has fully isolated data." },
                new { Icon = "bi-shield-check", Title = "Secure by Default", Desc = "ASP.NET Identity, JWT tokens with role claims, and per-tenant IDOR protection." }
            })
            {
                <div class="col-md-6 col-lg-4">
                    <div class="feature-card">
                        <div class="feature-icon"><i class="bi @f.Icon"></i></div>
                        <h5 class="fw-semibold mb-2" style="letter-spacing:-.02em;">@f.Title</h5>
                        <p class="text-muted mb-0" style="font-size:.9rem;line-height:1.6;">@f.Desc</p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- CTA -->
<section class="py-5" style="background:linear-gradient(135deg,#1a1a2e 0%,var(--primary-dark) 100%);">
    <div class="container py-3 text-center" style="position:relative;z-index:1;">
        <h2 style="font-size:2rem;font-weight:700;color:white;letter-spacing:-.03em;margin-bottom:.75rem;">Ready to take bookings online?</h2>
        <p style="color:rgba(255,255,255,.65);margin-bottom:2rem;">Set up your booking page in minutes. No credit card required.</p>
        <a asp-controller="Home" asp-action="Setup" class="btn btn-brand btn-lg px-5 py-3" style="font-size:1rem;">
            <i class="bi bi-rocket-takeoff me-2"></i>Start for Free
        </a>
    </div>
</section>
