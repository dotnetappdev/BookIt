@using BookIt.Core.Enums
@{
    ViewData["Title"] = "Set Up Your Booking Page";
}

<div class="min-vh-100 d-flex" style="background:var(--surface-2);">
    <!-- Left info panel (xl+) -->
    <div class="d-none d-xl-flex flex-column justify-content-between col-xl-4" style="background:linear-gradient(160deg,#16213e 0%,var(--primary-dark) 100%);padding:3rem;position:relative;overflow:hidden;">
        <div style="position:absolute;top:-20%;right:-20%;width:400px;height:400px;background:radial-gradient(circle,rgba(108,92,231,.3) 0%,transparent 70%);pointer-events:none;"></div>
        <div style="position:relative;z-index:1;">
            <a href="/" class="d-flex align-items-center gap-2 text-decoration-none mb-5">
                <div style="width:36px;height:36px;background:rgba(255,255,255,.15);border-radius:9px;display:flex;align-items:center;justify-content:center;border:1px solid rgba(255,255,255,.2);">
                    <i class="bi bi-calendar-check text-white"></i>
                </div>
                <span style="color:white;font-weight:700;font-size:1.15rem;letter-spacing:-.03em;">BookIt</span>
            </a>
            <h2 style="color:white;font-size:1.75rem;font-weight:700;letter-spacing:-.04em;line-height:1.2;margin-bottom:1rem;">
                Get set up in<br><span style="color:var(--primary-light);">under 2 minutes.</span>
            </h2>
            <p style="color:rgba(255,255,255,.6);font-size:.9rem;line-height:1.7;margin-bottom:2rem;">
                Create your booking page, accept online appointments and payments â€” all from one dashboard.
            </p>
            <div class="d-flex flex-column gap-3">
                @foreach (var step in new[] {
                    new { n="1", title="Create your profile", desc="Business name, type and contact info" },
                    new { n="2", title="Set up your admin", desc="Your email and secure password" },
                    new { n="3", title="Go live instantly", desc="Your booking page is ready immediately" }
                })
                {
                    <div class="d-flex align-items-start gap-3">
                        <div style="width:28px;height:28px;border-radius:50%;background:rgba(108,92,231,.3);border:1px solid rgba(108,92,231,.5);display:flex;align-items:center;justify-content:center;color:var(--primary-light);font-weight:700;font-size:.8rem;flex-shrink:0;">@step.n</div>
                        <div>
                            <div style="color:white;font-weight:600;font-size:.875rem;">@step.title</div>
                            <div style="color:rgba(255,255,255,.5);font-size:.8rem;">@step.desc</div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div style="position:relative;z-index:1;color:rgba(255,255,255,.4);font-size:.8rem;">
            &copy; @DateTime.Now.Year BookIt. All rights reserved.
        </div>
    </div>

    <!-- Right form panel -->
    <div class="flex-grow-1 d-flex align-items-start justify-content-center py-5 px-3" style="overflow-y:auto;">
        <div style="width:100%;max-width:680px;">
            <!-- Mobile logo -->
            <a href="/" class="d-flex d-xl-none align-items-center gap-2 text-decoration-none mb-4">
                <div style="width:32px;height:32px;background:var(--primary);border-radius:8px;display:flex;align-items:center;justify-content:center;">
                    <i class="bi bi-calendar-check text-white" style="font-size:.85rem;"></i>
                </div>
                <span class="text-brand fw-bold fs-5">BookIt</span>
            </a>

            <div class="mb-4">
                <h1 style="font-size:1.75rem;font-weight:700;letter-spacing:-.03em;margin-bottom:.35rem;color:var(--text);">Create your booking page</h1>
                <p style="color:var(--text-secondary);margin-bottom:0;">Fill in the details below to get your business live in minutes.</p>
            </div>

            <!-- Progress indicator -->
            <div class="booking-steps mb-5">
                <div class="booking-step active done">
                    <div class="booking-step-circle"><i class="bi bi-building"></i></div>
                    <div class="booking-step-label">Business</div>
                </div>
                <div class="booking-step active done">
                    <div class="booking-step-circle"><i class="bi bi-person"></i></div>
                    <div class="booking-step-label">Account</div>
                </div>
                <div class="booking-step">
                    <div class="booking-step-circle"><i class="bi bi-check2"></i></div>
                    <div class="booking-step-label">Done!</div>
                </div>
            </div>

            <form method="post" asp-controller="Setup" asp-action="Create" id="setupForm" novalidate>

                <!-- Section 1: Business Info -->
                <div class="card mb-4" style="border-radius:var(--radius-lg);">
                    <div class="card-header px-4 py-3 d-flex align-items-center gap-2">
                        <div class="stat-icon" style="width:32px;height:32px;background:var(--primary-subtle);color:var(--primary);font-size:.9rem;border-radius:8px;margin:0;">
                            <i class="bi bi-building"></i>
                        </div>
                        <span style="font-weight:600;">Business Information</span>
                    </div>
                    <div class="card-body p-4">
                        <div class="row g-3">
                            <div class="col-md-8">
                                <label for="businessName" class="form-label">Business Name <span class="text-danger">*</span></label>
                                <input type="text" class="form-control form-control-lg" id="businessName" name="BusinessName" placeholder="e.g. Mike's Barber Shop" required />
                            </div>
                            <div class="col-md-4">
                                <label for="businessType" class="form-label">Business Type <span class="text-danger">*</span></label>
                                <select class="form-select form-select-lg" id="businessType" name="BusinessType" required>
                                    @foreach (BusinessType type in Enum.GetValues<BusinessType>())
                                    {
                                        <option value="@((int)type)">@type</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label for="phone" class="form-label">Phone</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                                    <input type="tel" class="form-control" id="phone" name="Phone" placeholder="+44 7700 900000" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="timezone" class="form-label">Time Zone</label>
                                <select class="form-select" id="timezone" name="TimeZone">
                                    <option value="Europe/London">Europe/London (GMT)</option>
                                    <option value="America/New_York">America/New York (EST)</option>
                                    <option value="America/Chicago">America/Chicago (CST)</option>
                                    <option value="America/Denver">America/Denver (MST)</option>
                                    <option value="America/Los_Angeles">America/Los Angeles (PST)</option>
                                    <option value="Europe/Paris">Europe/Paris (CET)</option>
                                    <option value="Asia/Dubai">Asia/Dubai (GST)</option>
                                    <option value="Asia/Singapore">Asia/Singapore (SGT)</option>
                                    <option value="Australia/Sydney">Australia/Sydney (AEST)</option>
                                </select>
                            </div>
                            <div class="col-12">
                                <label for="address" class="form-label">Address</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-geo-alt"></i></span>
                                    <input type="text" class="form-control" id="address" name="Address" placeholder="123 High Street, London" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Section 2: Admin Account -->
                <div class="card mb-4" style="border-radius:var(--radius-lg);">
                    <div class="card-header px-4 py-3 d-flex align-items-center gap-2">
                        <div style="width:32px;height:32px;background:rgba(16,185,129,.1);border-radius:8px;display:flex;align-items:center;justify-content:center;color:#10b981;font-size:.9rem;">
                            <i class="bi bi-person-gear"></i>
                        </div>
                        <span style="font-weight:600;">Admin Account</span>
                    </div>
                    <div class="card-body p-4">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="firstName" class="form-label">First Name <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="firstName" name="AdminFirstName" required autocomplete="given-name" />
                            </div>
                            <div class="col-md-6">
                                <label for="lastName" class="form-label">Last Name <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="lastName" name="AdminLastName" required autocomplete="family-name" />
                            </div>
                            <div class="col-12">
                                <label for="adminEmail" class="form-label">Email Address <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                    <input type="email" class="form-control" id="adminEmail" name="AdminEmail" required autocomplete="email" placeholder="you@example.com" />
                                </div>
                                <div class="form-text">This will be your admin login email</div>
                            </div>
                            <div class="col-md-6">
                                <label for="password" class="form-label">Password <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                    <input type="password" class="form-control" id="password" name="AdminPassword" required minlength="8" placeholder="Min. 8 characters" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="confirmPassword" class="form-label">Confirm Password <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                                    <input type="password" class="form-control" id="confirmPassword" required minlength="8" placeholder="Repeat password" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Section 3: Database (optional) -->
                <div class="card mb-4" style="border-radius:var(--radius-lg);">
                    <div class="card-header px-4 py-3 d-flex align-items-center gap-2">
                        <div style="width:32px;height:32px;background:rgba(59,130,246,.1);border-radius:8px;display:flex;align-items:center;justify-content:center;color:#3b82f6;font-size:.9rem;">
                            <i class="bi bi-database"></i>
                        </div>
                        <span style="font-weight:600;">Database</span>
                        <span class="badge ms-1" style="background:var(--surface-3);color:var(--text-muted);font-size:.7rem;font-weight:500;">Optional</span>
                    </div>
                    <div class="card-body p-4">
                        <label for="connectionString" class="form-label">SQL Server Connection String</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-server"></i></span>
                            <input type="text" class="form-control" id="connectionString" name="ConnectionString" placeholder="Server=myserver;Database=BookItDb;..." />
                        </div>
                        <div class="form-text">Leave blank to use the built-in SQLite database (great for getting started)</div>
                    </div>
                </div>

                <button type="submit" class="btn btn-brand btn-lg w-100 py-3" style="font-size:1rem;">
                    <i class="bi bi-rocket-takeoff me-2"></i>Create My Booking Page
                </button>
                <p class="text-center mt-3 text-muted small">
                    Already have an account? <a asp-controller="Account" asp-action="Login" class="text-brand text-decoration-none fw-semibold">Sign in</a>
                </p>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<script>
document.getElementById('setupForm').addEventListener('submit', function(e) {
    const pwd = document.getElementById('password').value;
    const conf = document.getElementById('confirmPassword').value;
    if (pwd !== conf) {
        e.preventDefault();
        alert('Passwords do not match');
    }
});
</script>
}
