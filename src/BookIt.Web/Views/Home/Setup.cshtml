@using BookIt.Core.Enums
@{
    ViewData["Title"] = "Setup Your BookIt Account";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="text-center mb-5">
                <h1 class="fw-bold"><i class="bi bi-rocket-takeoff me-2 text-brand"></i>Set Up Your Booking Page</h1>
                <p class="text-muted lead">Create your business profile and start taking bookings in minutes</p>
            </div>

            <div class="card shadow border-0" style="border-radius: 16px;">
                <div class="card-body p-5">
                    <form method="post" asp-controller="Setup" asp-action="Create" id="setupForm">
                        <!-- Step indicator -->
                        <div class="d-flex justify-content-center mb-4">
                            <div class="setup-steps d-flex gap-3">
                                <span class="badge bg-brand px-3 py-2">1. Business Info</span>
                                <span class="badge bg-secondary px-3 py-2">2. Admin Account</span>
                                <span class="badge bg-secondary px-3 py-2">3. Done!</span>
                            </div>
                        </div>

                        <h5 class="fw-semibold mb-4"><i class="bi bi-building me-2"></i>Business Information</h5>

                        <div class="row g-3 mb-4">
                            <div class="col-md-8">
                                <label for="businessName" class="form-label fw-semibold">Business Name <span class="text-danger">*</span></label>
                                <input type="text" class="form-control form-control-lg" id="businessName" name="BusinessName" placeholder="e.g. Mike's Barber Shop" required aria-required="true" />
                            </div>
                            <div class="col-md-4">
                                <label for="businessType" class="form-label fw-semibold">Business Type <span class="text-danger">*</span></label>
                                <select class="form-select form-select-lg" id="businessType" name="BusinessType" required aria-required="true">
                                    @foreach (BusinessType type in Enum.GetValues<BusinessType>())
                                    {
                                        <option value="@((int)type)">@type</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label for="phone" class="form-label fw-semibold">Phone</label>
                                <input type="tel" class="form-control" id="phone" name="Phone" placeholder="+44 7700 900000" />
                            </div>
                            <div class="col-md-6">
                                <label for="timezone" class="form-label fw-semibold">Time Zone</label>
                                <select class="form-select" id="timezone" name="TimeZone">
                                    <option value="Europe/London">Europe/London (GMT)</option>
                                    <option value="America/New_York">America/New York (EST)</option>
                                    <option value="America/Chicago">America/Chicago (CST)</option>
                                    <option value="America/Denver">America/Denver (MST)</option>
                                    <option value="America/Los_Angeles">America/Los Angeles (PST)</option>
                                    <option value="Europe/Paris">Europe/Paris (CET)</option>
                                    <option value="Asia/Dubai">Asia/Dubai (GST)</option>
                                    <option value="Asia/Singapore">Asia/Singapore (SGT)</option>
                                    <option value="Australia/Sydney">Australia/Sydney (AEST)</option>
                                </select>
                            </div>
                            <div class="col-12">
                                <label for="address" class="form-label fw-semibold">Address</label>
                                <input type="text" class="form-control" id="address" name="Address" placeholder="123 High Street, London" />
                            </div>
                        </div>

                        <hr class="my-4" />

                        <h5 class="fw-semibold mb-4"><i class="bi bi-person-gear me-2"></i>Admin Account</h5>

                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label for="firstName" class="form-label fw-semibold">First Name <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="firstName" name="AdminFirstName" required aria-required="true" />
                            </div>
                            <div class="col-md-6">
                                <label for="lastName" class="form-label fw-semibold">Last Name <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="lastName" name="AdminLastName" required aria-required="true" />
                            </div>
                            <div class="col-12">
                                <label for="adminEmail" class="form-label fw-semibold">Email Address <span class="text-danger">*</span></label>
                                <input type="email" class="form-control" id="adminEmail" name="AdminEmail" required aria-required="true" aria-describedby="emailHelp" />
                                <div id="emailHelp" class="form-text">This will be your admin login email</div>
                            </div>
                            <div class="col-md-6">
                                <label for="password" class="form-label fw-semibold">Password <span class="text-danger">*</span></label>
                                <input type="password" class="form-control" id="password" name="AdminPassword" required aria-required="true" minlength="8" />
                            </div>
                            <div class="col-md-6">
                                <label for="confirmPassword" class="form-label fw-semibold">Confirm Password <span class="text-danger">*</span></label>
                                <input type="password" class="form-control" id="confirmPassword" required aria-required="true" minlength="8" />
                            </div>
                        </div>

                        <hr class="my-4" />

                        <h5 class="fw-semibold mb-4"><i class="bi bi-database me-2"></i>Database Configuration <small class="text-muted fw-normal">(Optional)</small></h5>
                        <div class="mb-4">
                            <label for="connectionString" class="form-label fw-semibold">Connection String</label>
                            <input type="text" class="form-control" id="connectionString" name="ConnectionString"
                                   placeholder="Server=myserver;Database=BookItDb;User Id=sa;Password=..." aria-describedby="connHelp" />
                            <div id="connHelp" class="form-text">Leave blank to use the default LocalDB connection string</div>
                        </div>

                        <button type="submit" class="btn btn-brand btn-lg w-100">
                            <i class="bi bi-check-circle me-2"></i>Create My Booking Page
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
document.getElementById('setupForm').addEventListener('submit', function(e) {
    const password = document.getElementById('password').value;
    const confirm = document.getElementById('confirmPassword').value;
    if (password !== confirm) {
        e.preventDefault();
        alert('Passwords do not match');
    }
});
</script>
}
