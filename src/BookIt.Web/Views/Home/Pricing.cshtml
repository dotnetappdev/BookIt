@{
    ViewData["Title"] = "Pricing — BookIt";
}

<!-- Pricing Hero -->
<section class="py-5" style="background:linear-gradient(135deg,#0f0f23 0%,#16213e 40%,#2d1b69 100%);position:relative;overflow:hidden;">
    <div style="position:absolute;top:50%;left:50%;transform:translate(-50%,-50%);width:600px;height:600px;background:radial-gradient(circle,rgba(108,92,231,.25) 0%,transparent 70%);pointer-events:none;"></div>
    <div class="container py-5 text-center" style="position:relative;z-index:1;">
        <div class="hero-badge mb-4" style="display:inline-flex;">
            <span class="hero-badge-dot"></span>
            <span>Simple, transparent pricing</span>
        </div>
        <h1 style="font-size:clamp(2rem,5vw,3.25rem);font-weight:800;letter-spacing:-.05em;color:white;margin-bottom:1rem;">
            Plans for every business
        </h1>
        <p style="color:rgba(255,255,255,.65);font-size:1.1rem;max-width:480px;margin:0 auto 2rem;">
            Start free, upgrade when you're ready. All plans include a 14-day free trial. No credit card required.
        </p>
        <!-- Billing toggle -->
        <div class="d-flex align-items-center justify-content-center gap-3">
            <span style="color:rgba(255,255,255,.7);font-size:.9rem;font-weight:500;">Monthly</span>
            <div class="form-check form-switch mb-0">
                <input class="form-check-input" type="checkbox" role="switch" id="billingToggle" onchange="toggleBilling(this)" style="width:2.5em;height:1.4em;cursor:pointer;" />
            </div>
            <span style="color:rgba(255,255,255,.7);font-size:.9rem;font-weight:500;">
                Annual <span style="background:rgba(16,185,129,.25);color:#10b981;font-size:.7rem;font-weight:700;padding:.2rem .5rem;border-radius:99px;margin-left:.25rem;">Save 20%</span>
            </span>
        </div>
    </div>
</section>

