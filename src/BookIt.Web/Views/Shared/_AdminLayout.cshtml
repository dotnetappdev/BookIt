<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookIt Admin</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
    <style>
        :root {
            --primary: @(ViewBag.PrimaryColor ?? "#6c5ce7");
            --primary-dark: @(ViewBag.PrimaryColor ?? "#5549d1");
        }
    </style>
</head>
<body>
<div class="admin-wrapper">
    <!-- Sidebar overlay (mobile) -->
    <div class="sidebar-overlay" id="sidebarOverlay" onclick="closeSidebar()"></div>

    <!-- Sidebar -->
    <aside class="admin-sidebar" id="adminSidebar">
        <!-- Brand -->
        <a href="/" class="sidebar-brand text-decoration-none">
            <div class="sidebar-brand-icon">
                <i class="bi bi-calendar-check"></i>
            </div>
            <div>
                <span class="sidebar-brand-text">BookIt</span>
                <span class="sidebar-brand-sub">Admin Portal</span>
            </div>
        </a>

        <!-- Navigation -->
        <nav class="sidebar-nav">
            @{
                var slug = Context.Session.GetString("TenantSlug") ?? "";
                var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
                var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
            }
            <div class="sidebar-section-title">Main Menu</div>

            <a href="/@slug/admin" class="sidebar-link @(currentAction == "Index" && currentController == "Admin" ? "active" : "")">
                <i class="bi bi-speedometer2"></i>
                <span>Dashboard</span>
            </a>
            <a href="/@slug/admin/Calendar" class="sidebar-link @(currentController == "Admin" && currentAction == "Calendar" ? "active" : "")">
                <i class="bi bi-calendar3"></i>
                <span>Calendar</span>
            </a>

            <div class="sidebar-section-title">Management</div>

            <a href="/@slug/admin/Services" class="sidebar-link @(currentController == "Admin" && currentAction == "Services" ? "active" : "")">
                <i class="bi bi-grid-3x3-gap"></i>
                <span>Services</span>
            </a>
            <a href="/@slug/admin/Forms" class="sidebar-link @(currentController == "Admin" && (currentAction == "Forms" || currentAction == "FormBuilder") ? "active" : "")">
                <i class="bi bi-ui-checks"></i>
                <span>Forms</span>
            </a>
            <a href="/@slug/admin/Interviews" class="sidebar-link @(currentController == "Admin" && currentAction == "Interviews" ? "active" : "")">
                <i class="bi bi-people"></i>
                <span>Interviews</span>
            </a>
            <a href="/@slug/book" target="_blank" class="sidebar-link">
                <i class="bi bi-box-arrow-up-right"></i>
                <span>Booking Page</span>
            </a>

            <div class="sidebar-section-title">Configuration</div>

            <a href="/@slug/admin/Settings" class="sidebar-link @(currentController == "Admin" && currentAction == "Settings" ? "active" : "")">
                <i class="bi bi-gear"></i>
                <span>Settings</span>
            </a>
        </nav>

        <!-- User Footer -->
        <div class="sidebar-footer">
            @{
                var userName = Context.Session.GetString("UserName") ?? "Admin";
                var initials = string.Concat(userName.Split(' ').Take(2).Select(p => p.Length > 0 ? p[0].ToString() : "")).ToUpper();
                if (initials.Length == 0) initials = "A";
            }
            <div class="sidebar-user mb-3">
                <div class="sidebar-avatar">@initials</div>
                <div class="sidebar-user-info">
                    <div class="sidebar-user-name">@userName</div>
                    <div class="sidebar-user-role">Administrator</div>
                </div>
            </div>
            <a href="/Account/Logout" class="sidebar-link" style="padding-left:0; border:none;">
                <i class="bi bi-box-arrow-left"></i>
                <span>Sign Out</span>
            </a>
        </div>
    </aside>

    <!-- Main Content -->
    <div class="admin-main">
        <!-- Topbar -->
        <header class="admin-topbar">
            <button class="btn btn-sm d-lg-none" onclick="toggleSidebar()" aria-label="Toggle sidebar">
                <i class="bi bi-list fs-5"></i>
            </button>
            <div class="flex-grow-1 d-flex align-items-center gap-2">
                <nav aria-label="breadcrumb" class="d-none d-md-block">
                    <ol class="breadcrumb mb-0 small">
                        <li class="breadcrumb-item"><a href="/@slug/admin" class="text-decoration-none text-muted">Dashboard</a></li>
                        @if (ViewData["Title"] != null && ViewData["Title"]?.ToString() != "Dashboard")
                        {
                            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
                        }
                    </ol>
                </nav>
            </div>
            <div class="d-flex align-items-center gap-2">
                <a href="/@slug/book" target="_blank" class="btn btn-sm btn-outline-secondary d-none d-md-inline-flex align-items-center gap-1">
                    <i class="bi bi-eye"></i><span>View Site</span>
                </a>
                <div class="dropdown">
                    <button class="btn btn-sm d-flex align-items-center gap-2 border rounded-3 px-2 py-1" data-bs-toggle="dropdown" style="background:var(--surface-3)">
                        <div class="sidebar-avatar" style="width:28px;height:28px;font-size:.75rem;">@initials</div>
                        <i class="bi bi-chevron-down small text-muted"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end shadow border-0 mt-1">
                        <li><a class="dropdown-item" href="/@slug/admin/Settings"><i class="bi bi-gear me-2"></i>Settings</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-danger" href="/Account/Logout"><i class="bi bi-box-arrow-right me-2"></i>Sign Out</a></li>
                    </ul>
                </div>
            </div>
        </header>

        <!-- Flash messages -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show m-4 mb-0 rounded-3 border-0 shadow-sm" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show m-4 mb-0 rounded-3 border-0 shadow-sm" role="alert">
                <i class="bi bi-exclamation-circle-fill me-2"></i>@TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <main class="admin-content">
            @RenderBody()
        </main>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
function toggleSidebar() {
    document.getElementById('adminSidebar').classList.toggle('show');
    document.getElementById('sidebarOverlay').classList.toggle('show');
}
function closeSidebar() {
    document.getElementById('adminSidebar').classList.remove('show');
    document.getElementById('sidebarOverlay').classList.remove('show');
}
</script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
