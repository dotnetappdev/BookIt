<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookIt</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
    <script>
        // Apply saved theme immediately to prevent flash of wrong theme
        (function(){ var t=localStorage.getItem('bookit-theme')||'light'; document.documentElement.setAttribute('data-theme',t); })();
    </script>
    <style>
        :root {
            --primary: @(ViewBag.PrimaryColor ?? "#6c5ce7");
            --primary-dark: @(ViewBag.PrimaryColor ?? "#5549d1");
        }
    </style>
</head>
<body style="background: var(--surface-2);">
    <a href="#main-content" class="skip-link">Skip to content</a>

    <header>
        <nav class="navbar navbar-expand-lg navbar-public shadow-none px-0">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center gap-2" asp-controller="Home" asp-action="Index">
                    <div class="brand-icon">
                        <i class="bi bi-calendar-check text-white" style="font-size:.9rem;"></i>
                    </div>
                    BookIt
                </a>
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain" aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="bi bi-list fs-4 text-brand"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav ms-auto align-items-center gap-1">
                        @if (Context.Session.GetString("AccessToken") != null)
                        {
                            var slug = Context.Session.GetString("TenantSlug");
                            var navUserName = Context.Session.GetString("UserName") ?? "Admin";
                            var navInitials = string.Concat(navUserName.Split(' ').Take(2).Select(p => p.Length > 0 ? p[0].ToString() : "")).ToUpper();
                            if (navInitials.Length == 0) navInitials = "A";
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Index" asp-route-tenantSlug="@slug">
                                    <i class="bi bi-speedometer2 me-1"></i>Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <button class="dark-mode-toggle" onclick="toggleDarkMode()" aria-label="Toggle dark mode" title="Toggle dark/light mode">
                                    <i class="dark-mode-icon bi bi-moon-fill"></i>
                                </button>
                            </li>
                            <li class="nav-item dropdown">
                                <button class="nav-profile-btn" data-bs-toggle="dropdown" aria-expanded="false" aria-label="Profile menu">
                                    <div class="nav-avatar">@navInitials</div>
                                    <span class="nav-username d-none d-md-inline">@navUserName</span>
                                    <i class="bi bi-chevron-down nav-chevron"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end nav-profile-dropdown shadow border-0 mt-2">
                                    <li>
                                        <div class="dropdown-header-user px-3 py-2">
                                            <div class="nav-avatar nav-avatar-lg">@navInitials</div>
                                            <div>
                                                <div class="fw-semibold" style="font-size:.875rem;">@navUserName</div>
                                                <div class="text-muted" style="font-size:.75rem;">@(slug ?? "") Â· Admin</div>
                                            </div>
                                        </div>
                                    </li>
                                    <li><hr class="dropdown-divider my-1"></li>
                                    <li><a class="dropdown-item" href="/@slug/admin"><i class="bi bi-speedometer2 me-2 text-brand"></i>Dashboard</a></li>
                                    <li><a class="dropdown-item" href="/@slug/admin/Settings"><i class="bi bi-gear me-2 text-muted"></i>Profile &amp; Settings</a></li>
                                    <li><a class="dropdown-item" href="/@slug/book" target="_blank"><i class="bi bi-box-arrow-up-right me-2 text-muted"></i>View Booking Page</a></li>
                                    <li><hr class="dropdown-divider my-1"></li>
                                    <li><a class="dropdown-item text-danger" href="/Account/Logout"><i class="bi bi-box-arrow-right me-2"></i>Sign Out</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                        <li class="nav-item d-none d-lg-flex">
                                <a class="nav-link" href="/#features">Features</a>
                            </li>
                            <li class="nav-item d-none d-lg-flex">
                                <a class="nav-link" href="/#how-it-works">How it works</a>
                            </li>
                            <li class="nav-item d-none d-lg-flex">
                                <a class="nav-link" asp-controller="Home" asp-action="Pricing">Pricing</a>
                            </li>
                            <li class="nav-item">
                                <div class="navbar-divider d-none d-lg-flex"></div>
                            </li>
                            <li class="nav-item">
                                <button class="dark-mode-toggle" onclick="toggleDarkMode()" aria-label="Toggle dark mode" title="Toggle dark/light mode">
                                    <i class="dark-mode-icon bi bi-moon-fill"></i>
                                </button>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Sign In</a>
                            </li>
                            <li class="nav-item ms-1">
                                <a class="btn btn-brand px-4 py-2" style="border-radius:8px;" asp-controller="Home" asp-action="Setup">Get Started</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" id="main-content">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show mx-3 mt-3 rounded-3 border-0 shadow-sm" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show mx-3 mt-3 rounded-3 border-0 shadow-sm" role="alert">
                <i class="bi bi-exclamation-circle-fill me-2"></i>@TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @RenderBody()
    </main>

    <footer class="py-5 mt-0" style="background:#0f0f1a;color:rgba(255,255,255,.6);">
        <div class="container">
            <div class="row g-4 mb-4">
                <div class="col-md-4">
                    <div class="d-flex align-items-center gap-2 mb-3">
                        <div style="width:30px;height:30px;background:linear-gradient(135deg,var(--primary),var(--primary-dark));border-radius:8px;display:flex;align-items:center;justify-content:center;">
                            <i class="bi bi-calendar-check text-white" style="font-size:.8rem;"></i>
                        </div>
                        <span style="font-weight:800;font-size:1.05rem;color:white;letter-spacing:-.03em;">BookIt</span>
                    </div>
                    <p style="font-size:.875rem;line-height:1.65;color:rgba(255,255,255,.45);max-width:220px;">The smart booking CRM for modern service businesses.</p>
                </div>
                <div class="col-6 col-md-2">
                    <div style="font-weight:600;font-size:.8rem;text-transform:uppercase;letter-spacing:.08em;color:rgba(255,255,255,.35);margin-bottom:.875rem;">Product</div>
                    <div style="display:flex;flex-direction:column;gap:.5rem;">
                        <a href="/#features" style="color:rgba(255,255,255,.5);font-size:.875rem;text-decoration:none;transition:color .15s;" onmouseover="this.style.color='white'" onmouseout="this.style.color='rgba(255,255,255,.5)'">Features</a>
                        <a href="/#how-it-works" style="color:rgba(255,255,255,.5);font-size:.875rem;text-decoration:none;transition:color .15s;" onmouseover="this.style.color='white'" onmouseout="this.style.color='rgba(255,255,255,.5)'">How it works</a>
                        <a href="/Home/Pricing" style="color:rgba(255,255,255,.5);font-size:.875rem;text-decoration:none;transition:color .15s;" onmouseover="this.style.color='white'" onmouseout="this.style.color='rgba(255,255,255,.5)'">Pricing</a>
                        <a href="/demo-barber/book" target="_blank" style="color:rgba(255,255,255,.5);font-size:.875rem;text-decoration:none;transition:color .15s;" onmouseover="this.style.color='white'" onmouseout="this.style.color='rgba(255,255,255,.5)'">Live Demo</a>
                    </div>
                </div>
                <div class="col-6 col-md-2">
                    <div style="font-weight:600;font-size:.8rem;text-transform:uppercase;letter-spacing:.08em;color:rgba(255,255,255,.35);margin-bottom:.875rem;">Business</div>
                    <div style="display:flex;flex-direction:column;gap:.5rem;">
                        <a asp-controller="Home" asp-action="Setup" style="color:rgba(255,255,255,.5);font-size:.875rem;text-decoration:none;transition:color .15s;" onmouseover="this.style.color='white'" onmouseout="this.style.color='rgba(255,255,255,.5)'">Get Started</a>
                        <a asp-controller="Account" asp-action="Login" style="color:rgba(255,255,255,.5);font-size:.875rem;text-decoration:none;transition:color .15s;" onmouseover="this.style.color='white'" onmouseout="this.style.color='rgba(255,255,255,.5)'">Sign In</a>
                    </div>
                </div>
                <div class="col-6 col-md-2">
                    <div style="font-weight:600;font-size:.8rem;text-transform:uppercase;letter-spacing:.08em;color:rgba(255,255,255,.35);margin-bottom:.875rem;">Docs</div>
                    <div style="display:flex;flex-direction:column;gap:.5rem;">
                        <a href="/docs/EF-Migrations.md" style="color:rgba(255,255,255,.5);font-size:.875rem;text-decoration:none;transition:color .15s;" onmouseover="this.style.color='white'" onmouseout="this.style.color='rgba(255,255,255,.5)'">Migrations Guide</a>
                        <a href="#" style="color:rgba(255,255,255,.5);font-size:.875rem;text-decoration:none;transition:color .15s;" onmouseover="this.style.color='white'" onmouseout="this.style.color='rgba(255,255,255,.5)'">API Reference</a>
                    </div>
                </div>
            </div>
            <div style="border-top:1px solid rgba(255,255,255,.08);padding-top:1.5rem;display:flex;align-items:center;justify-content:space-between;flex-wrap:wrap;gap:.75rem;">
                <p style="margin:0;font-size:.8125rem;color:rgba(255,255,255,.3);">&copy; @DateTime.Now.Year BookIt. All rights reserved.</p>
                <div class="d-flex gap-3">
                    <a href="#" style="color:rgba(255,255,255,.35);font-size:.8125rem;text-decoration:none;">Privacy</a>
                    <a href="#" style="color:rgba(255,255,255,.35);font-size:.8125rem;text-decoration:none;">Terms</a>
                    <a href="#" style="color:rgba(255,255,255,.35);font-size:.8125rem;text-decoration:none;">Accessibility</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Sticky navbar scroll shadow
        (function() {
            var nav = document.querySelector('.navbar-public');
            if (nav) {
                window.addEventListener('scroll', function() {
                    nav.classList.toggle('scrolled', window.scrollY > 10);
                }, { passive: true });
            }
        })();
    </script>
    @await RenderSectionAsync("Scripts", required: false)
    @await Html.PartialAsync("_ChatWidget")
</body>
</html>
